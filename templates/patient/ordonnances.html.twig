{% extends 'base.html.twig' %}

{% block title %}Mes Ordonnances - MedTime{% endblock %}

{% block body %}
<div class="container-fluid" style="background-color: #f3f6f9; min-height: 100vh;">
    <div class="row">
        {% include 'patient/_rdv_sidebar.html.twig' with {activeTab: 'ordonnances'} %}

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4" style="margin-top: 80px;">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
                <h1 class="h2 fw-bold">Mes Ordonnances</h1>
            </div>

            {% if ordonnances is empty %}
                <div class="alert alert-info border-0 shadow-sm rounded-3">
                    <i class="fas fa-info-circle me-2"></i> Vous n'avez aucune ordonnance pour le moment.
                </div>
            {% else %}
                <div class="row g-4">
                    {% for ordonnance in ordonnances %}
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm rounded-4 h-100">
                                <div class="card-body p-4">
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div>
                                            <h5 class="fw-bold mb-1">Ordonnance #{{ ordonnance.id }}</h5>
                                            <small class="text-muted">
                                                <i class="far fa-calendar-alt me-1"></i>
                                                {{ ordonnance.consultation.consultationDate|date('d/m/Y') }}
                                            </small>
                                        </div>
                                        <div class="text-primary">
                                            <i class="fas fa-file-medical fa-2x"></i>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <small class="text-uppercase text-muted fw-bold" style="font-size: 0.75rem;">Médecin</small>
                                        <div class="d-flex align-items-center mt-1">
                                            <div class="avatar-small me-2 bg-light rounded-circle d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                                                <i class="fas fa-user-md text-secondary"></i>
                                            </div>
                                            <span>Dr. {{ ordonnance.consultation.doctor.user.username }}</span>
                                        </div>
                                    </div>

                                    <hr>

                                    <div class="d-grid">
                                        <a href="{{ path('app_products') }}" class="btn btn-primary rounded-pill btn-sm mt-2">
                                            <i class="fas fa-shopping-basket me-2"></i> Commander les médicaments
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </main>
    </div>
</div>
{% endblock %}