{% extends 'base.html.twig' %}

{% block title %}My Consultations - MedTime{% endblock %}

{% block body %}
<div class="container-fluid" style="background-color: #f3f6f9; min-height: 100vh;">
    <div class="row">

        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-white sidebar shadow-sm position-fixed" style="height: 100vh; z-index: 100; padding-top: 80px;">
            <div class="position-sticky pt-3">
                 <div class="text-center mb-4">
                     <div class="avatar rounded-circle bg-light d-inline-flex align-items-center justify-content-center mb-2" style="width: 80px; height: 80px;">
                        <i class="fas fa-user fa-2x text-primary"></i>
                     </div>
                     <h6 class="fw-bold mb-0">{{ app.user ? app.user.username : 'Patient' }}</h6>
                     <span class="badge bg-soft-primary text-primary rounded-pill">Patient</span>
                     <div class="mt-2">
                         <a href="{{ path('app_profile_edit') }}" class="btn btn-sm btn-outline-secondary rounded-pill py-0" style="font-size: 0.75rem;">Edit Profile</a>
                     </div>
                </div>

                <ul class="nav flex-column gap-2 px-3">
                    <li class="nav-item">
                        <a class="nav-link rounded-3 d-flex align-items-center p-3 text-secondary hover-bg-light" href="{{ path('app_patient_dashboard') }}">
                            <i class="fas fa-home me-3"></i> My Health Space
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_find_doctor') }}" class="nav-link rounded-3 d-flex align-items-center p-3 text-secondary hover-bg-light">
                            <i class="fas fa-user-md me-3"></i> Find Doctors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link rounded-3 d-flex align-items-center p-3 text-secondary hover-bg-light" href="{{ path('app_patient_appointments') }}">
                            <i class="fas fa-calendar-alt me-3"></i> My Appointments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active rounded-3 d-flex align-items-center p-3" href="#" style="background-color: #e3f2fd; color: #1E90FF; font-weight: 600;">
                            <i class="fas fa-stethoscope me-3"></i> My Consultations
                        </a>
                    </li>
                    <li class="nav-item mt-4 border-top pt-3">
                        <a class="nav-link rounded-3 d-flex align-items-center p-3 text-danger hover-bg-red-light" href="{{ path('app_logout') }}">
                            <i class="fas fa-sign-out-alt me-3"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4" style="margin-top: 80px;">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
                <h1 class="h2 fw-bold text-dark">My Consultations</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                     <a href="{{ path('app_consultation_new') }}" class="btn btn-primary rounded-pill px-4 shadow-sm" style="background-color: #1E90FF; border: none;">
                        <i class="fas fa-plus me-2"></i> New Consultation
                    </a>
                </div>
            </div>

            {% if consultations is empty %}
                <div class="text-center py-5">
                    <i class="fas fa-stethoscope fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No consultations yet</h4>
                    <p class="text-muted">Your consultation history will appear here once you have consultations with doctors.</p>
                    <a href="{{ path('app_consultation_new') }}" class="btn btn-primary rounded-pill px-4">
                        <i class="fas fa-plus me-2"></i> New Consultation
                    </a>
                </div>
            {% else %}
                <div class="row g-4">
                    {% for consultation in consultations %}
                        <div class="col-md-6 col-lg-4">
                            <div class="card border-0 shadow-sm rounded-4 h-100">
                                <div class="card-header bg-white border-0 py-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h6 class="card-title fw-bold text-dark mb-0">
                                            <i class="fas fa-stethoscope me-2 text-primary"></i>
                                            Consultation
                                        </h6>
                                        <span class="badge bg-{{ consultation.status == 'completed' ? 'success' : 'warning' }} rounded-pill">
                                            {{ consultation.status|title }}
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <small class="text-muted">Doctor</small>
                                        <p class="fw-bold mb-1">
                                            {% if consultation.doctor %}
                                                Dr. {{ consultation.doctor ? consultation.doctor.user.username : 'Non assign√©' }}
                                            {% else %}
                                                Not assigned
                                            {% endif %}
                                        </p>
                                    </div>
                                    <div class="mb-3">
                                        <small class="text-muted">Date & Time</small>
                                        <p class="fw-bold mb-1">
                                            <i class="far fa-calendar me-1"></i>
                                            {{ consultation.consultationDate|date('M d, Y') }}
                                        </p>
                                        <p class="text-muted small mb-0">
                                            <i class="far fa-clock me-1"></i>
                                            {{ consultation.consultationDate|date('H:i') }}
                                        </p>
                                    </div>
                                    <div class="mb-3">
                                        <small class="text-muted">Type</small>
                                        <p class="fw-bold mb-0">{{ consultation.type|title }}</p>
                                    </div>
                                    {% if consultation.ordonnances|length > 0 %}
                                        <div class="mb-3">
                                            <small class="text-muted">Prescriptions</small>
                                            <p class="text-success small mb-0">
                                                <i class="fas fa-prescription me-1"></i>
                                                {{ consultation.ordonnances|length }} prescription(s)
                                            </p>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="card-footer bg-light border-0">
                                    <div class="d-flex gap-2">
                                        <a href="{{ path('app_consultation_show', {'id': consultation.id}) }}" class="btn btn-outline-primary btn-sm rounded-pill flex-fill">
                                            <i class="fas fa-eye me-1"></i> View Details
                                        </a>
                                        {% if consultation.status != 'completed' %}
                                            <button class="btn btn-light btn-sm rounded-pill">
                                                <i class="fas fa-edit me-1"></i> Edit
                                            </button>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

        </main>
    </div>
</div>

<style>
    .hover-bg-light:hover { background-color: #f8f9fa !important; }
    .hover-bg-red-light:hover { background-color: #fff5f5 !important; }
    .bg-soft-primary { background-color: rgba(30, 144, 255, 0.1); }
</style>
{% endblock %}
