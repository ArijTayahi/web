{% extends 'base.html.twig' %}

{% block title %}My Appointments - MedTime{% endblock %}

{% block body %}
<div class="container-fluid" style="background-color: #f3f6f9; min-height: 100vh;">
    <div class="row">
        
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-white sidebar shadow-sm position-fixed" style="height: 100vh; z-index: 100; padding-top: 80px;">
            <div class="position-sticky pt-3">
                 <div class="text-center mb-4">
                     <div class="avatar rounded-circle bg-light d-inline-flex align-items-center justify-content-center mb-2" style="width: 80px; height: 80px;">
                        <i class="fas fa-user fa-2x text-primary"></i>
                     </div>
                     <h6 class="fw-bold mb-0">Ahmed Ben Ali</h6>
                     <span class="badge bg-soft-primary text-primary rounded-pill">Patient</span>
                     <div class="mt-2">
                         <a href="{{ path('app_profile_edit') }}" class="btn btn-sm btn-outline-secondary rounded-pill py-0" style="font-size: 0.75rem;">Edit Profile</a>
                     </div>
                </div>

                <ul class="nav flex-column gap-2 px-3">
                    <li class="nav-item">
                        <a class="nav-link rounded-3 d-flex align-items-center p-3 text-secondary hover-bg-light" href="{{ path('app_patient_dashboard') }}">
                            <i class="fas fa-home me-3"></i> My Health Space
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_find_doctor') }}" class="nav-link rounded-3 d-flex align-items-center p-3 text-secondary hover-bg-light">
                            <i class="fas fa-user-md me-3"></i> Find Doctors
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active rounded-3 d-flex align-items-center p-3" href="#" style="background-color: #e3f2fd; color: #1E90FF; font-weight: 600;">
                            <i class="fas fa-calendar-alt me-3"></i> My Appointments
                        </a>
                    </li>
                    <li class="nav-item mt-4 border-top pt-3">
                        <a class="nav-link rounded-3 d-flex align-items-center p-3 text-danger hover-bg-red-light" href="{{ path('app_logout') }}">
                            <i class="fas fa-sign-out-alt me-3"></i> Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4" style="margin-top: 80px;">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom">
                <h1 class="h2 fw-bold text-dark">My Schedule</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                     <a href="{{ path('app_find_doctor') }}" class="btn btn-primary rounded-pill px-4 shadow-sm" style="background-color: #1E90FF; border: none;">
                        <i class="fas fa-plus me-2"></i> Book New
                    </a>
                </div>
            </div>

            <div class="row g-4">
                <!-- Interactive Calendar -->
                <div class="col-lg-8">
                    <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100">
                        <div class="card-header bg-white border-0 py-3 d-flex justify-content-between align-items-center">
                            <h5 class="fw-bold mb-0">Calendar</h5>
                            <div class="d-flex align-items-center gap-2">
                                <button class="btn btn-sm btn-outline-light text-dark border" id="prevMonth"><i class="fas fa-chevron-left"></i></button>
                                <span class="fw-bold px-2" id="currentMonthYear">October 2026</span>
                                <button class="btn btn-sm btn-outline-light text-dark border" id="nextMonth"><i class="fas fa-chevron-right"></i></button>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <!-- Calendar Grid -->
                            <div class="calendar-grid" id="calendarGrid">
                                <!-- Days Header -->
                                <div class="row text-center text-muted fw-bold mb-3 small">
                                    <div class="col">Mon</div><div class="col">Tue</div><div class="col">Wed</div><div class="col">Thu</div><div class="col">Fri</div><div class="col">Sat</div><div class="col">Sun</div>
                                </div>
                                <!-- Days Generated by JS -->
                                <div id="calendarDays" class="calendar-days-grid"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Upcoming Appointments List Side -->
                <div class="col-lg-4">
                    <div class="card border-0 shadow-sm rounded-4 h-100 bg-soft-primary">
                        <div class="card-body p-4">
                            <h5 class="fw-bold mb-4 text-primary">Upcoming</h5>
                            
                            <div class="d-flex flex-column gap-3">
                                <!-- Appointment Item -->
                                <div class="bg-white p-3 rounded-4 shadow-sm border-start border-4 border-primary position-relative">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="badge bg-light text-primary">Cardiology</span>
                                        <small class="text-muted fw-bold">12 Oct</small>
                                    </div>
                                    <h6 class="fw-bold mb-1">Dr. Salah Dridi</h6>
                                    <p class="text-muted small mb-2"><i class="far fa-clock me-1"></i> 10:00 AM - 10:30 AM</p>
                                    <div class="d-flex gap-2 mt-2">
                                        <button class="btn btn-sm btn-outline-primary rounded-pill w-100">Reschedule</button>
                                        <button class="btn btn-sm btn-light text-danger rounded-pill"><i class="fas fa-times"></i></button>
                                    </div>
                                </div>

                                <!-- Appointment Item -->
                                <div class="bg-white p-3 rounded-4 shadow-sm border-start border-4 border-info position-relative">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="badge bg-light text-info">General</span>
                                        <small class="text-muted fw-bold">15 Oct</small>
                                    </div>
                                    <h6 class="fw-bold mb-1">Dr. Amel Tounsi</h6>
                                    <p class="text-muted small mb-2"><i class="far fa-clock me-1"></i> 02:00 PM - 02:30 PM</p>
                                    <div class="d-flex gap-2 mt-2">
                                        <button class="btn btn-sm btn-outline-primary rounded-pill w-100">Reschedule</button>
                                        <button class="btn btn-sm btn-light text-danger rounded-pill"><i class="fas fa-times"></i></button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- Past Appointments -->
            <div class="mt-5">
                <h5 class="fw-bold mb-3">Past History</h5>
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4 py-3 border-0">Doctor</th>
                                    <th class="py-3 border-0">Department</th>
                                    <th class="py-3 border-0">Date</th>
                                    <th class="py-3 border-0">Status</th>
                                    <th class="pe-4 py-3 border-0 text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="ps-4 fw-bold">Dr. Sarah Johnson</td>
                                    <td class="text-muted">Dentistry</td>
                                    <td>20 Sep 2026</td>
                                    <td><span class="badge bg-soft-success text-success">Completed</span></td>
                                    <td class="pe-4 text-end"><button class="btn btn-sm btn-light rounded-pill">View Summary</button></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </main>
    </div>
</div>

<style>
    .bg-soft-primary { background-color: rgba(30, 144, 255, 0.05); }
    .bg-soft-success { background-color: rgba(25, 135, 84, 0.1); }
    .calendar-days-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 10px;
    }
    .calendar-day {
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.2s;
    }
    .calendar-day:hover {
        background-color: #f8f9fa;
        color: #1E90FF;
    }
    .calendar-day.active {
        background-color: #1E90FF;
        color: white;
        box-shadow: 0 4px 10px rgba(30, 144, 255, 0.3);
    }
    .calendar-day.has-event::after {
        content: '';
        position: absolute;
        bottom: 5px;
        width: 4px;
        height: 4px;
        background-color: #1E90FF;
        border-radius: 50%;
    }
    .calendar-day.active.has-event::after {
        background-color: white;
    }
    .text-muted-light { color: #dee2e6; }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const date = new Date();
        const currentMonthYear = document.getElementById('currentMonthYear');
        const calendarDays = document.getElementById('calendarDays');
        
        let month = date.getMonth();
        let year = date.getFullYear();

        const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];

        function renderCalendar() {
            date.setDate(1);
            const firstDayIndex = new Date(year, month, 1).getDay() - 1; // Adjust for Monday start? Let's assume standard Sunday start for simplicity or adjust grid
            // Actually our header says Mon...Sun. So let's adjust index.
            // new Date().getDay() returns 0 for Sunday. 
            // If Mon is 0, Tue 1... Sun 6.
            // If getDay() is 0 (Sun), we want index 6. 
            // If getDay() is 1 (Mon), we want index 0.
            const adjustedFirstDayIndex = (new Date(year, month, 1).getDay() + 6) % 7;

            const lastDay = new Date(year, month + 1, 0).getDate();
            const prevLastDay = new Date(year, month, 0).getDate();
            
            currentMonthYear.innerText = `${months[month]} ${year}`;
            
            let days = "";

            // Prev Month Days
            for (let x = adjustedFirstDayIndex; x > 0; x--) {
                days += `<div class="calendar-day text-muted-light">${prevLastDay - x + 1}</div>`;
            }

            // Current Month Days
            for (let i = 1; i <= lastDay; i++) {
                let activeClass = "";
                if (i === new Date().getDate() && month === new Date().getMonth() && year === new Date().getFullYear()) {
                    activeClass = "active";
                }
                // Simulated Event on 12th and 15th
                let eventClass = "";
                if ((i === 12 || i === 15) && month === 9 && year === 2026) { // Oct 2026
                     eventClass = "has-event position-relative";
                }

                days += `<div class="calendar-day ${activeClass} ${eventClass}">${i}</div>`;
            }

            calendarDays.innerHTML = days;
        }

        document.getElementById('prevMonth').addEventListener('click', () => {
            month--;
            if(month < 0) { month = 11; year--; }
            renderCalendar();
        });

        document.getElementById('nextMonth').addEventListener('click', () => {
            month++;
            if(month > 11) { month = 0; year++; }
            renderCalendar();
        });

        renderCalendar();
    });
</script>
{% endblock %}
