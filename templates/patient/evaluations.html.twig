{% extends 'base.html.twig' %}

{% block title %}Evaluations Medecins{% endblock %}

{% block body %}
<div class="container-fluid" style="background-color: #f3f6f9; min-height: 100vh;">
    <div class="row">
        {% include 'patient/_rdv_sidebar.html.twig' with {activeTab: 'evaluations'} %}

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4" style="margin-top: 80px;">
            <div class="d-flex justify-content-between align-items-center pt-3 pb-2 mb-4 border-bottom">
                <h1 class="h3 fw-bold mb-0">Evaluer un medecin</h1>
            </div>

            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Nouvelle evaluation</h5>
                    <form method="post" action="{{ path('app_patient_evaluations') }}" class="row g-3">
                        <input type="hidden" name="_token" value="{{ csrf_token('submit_evaluation') }}">
                        <div class="col-md-5">
                            <label class="form-label">Consultation</label>
                            <select name="consultation_id" class="form-select" required>
                                <option value="">Choisir...</option>
                                {% for consultation in consultations %}
                                    <option value="{{ consultation.id }}">
                                        {{ consultation.consultationDate|date('d/m/Y H:i') }} - Dr. {{ consultation.doctor.user.username }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Note</label>
                            <select name="score" class="form-select" required>
                                <option value="5">5</option>
                                <option value="4">4</option>
                                <option value="3">3</option>
                                <option value="2">2</option>
                                <option value="1">1</option>
                            </select>
                        </div>
                        <div class="col-md-12">
                            <label class="form-label">Commentaire</label>
                            <textarea name="commentaire" class="form-control" rows="3" placeholder="Votre retour sur la consultation"></textarea>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn btn-primary rounded-pill px-4">Envoyer evaluation</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h5 class="fw-bold mb-3">Mes evaluations deja envoyees</h5>
                    {% if existingEvaluations is empty %}
                        <p class="text-muted mb-0">Aucune evaluation pour le moment.</p>
                    {% else %}
                        <div class="table-responsive">
                            <table class="table align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Note</th>
                                        <th>Commentaire</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for evaluation in existingEvaluations %}
                                        <tr>
                                            <td>{{ evaluation.createdAt|date('d/m/Y H:i') }}</td>
                                            <td>{{ evaluation.score }}/5</td>
                                            <td>{{ evaluation.commentaire ?: '-' }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% endif %}
                </div>
            </div>
        </main>
    </div>
</div>
{% endblock %}
