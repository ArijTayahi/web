{% extends 'base.html.twig' %}

{% block title %}Mes consultations{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">üìã Mes consultations</h4>
        </div>
        <div class="card-body">
            {% if consultations is empty %}
                <div class="alert alert-info">
                    Aucune consultation pour le moment.
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#ID</th>
                                <th>{{ is_granted('ROLE_PHYSICIAN') ? 'Patient' : 'M√©decin' }}</th>
                                <th>Type</th>
                                <th>Date</th>
                                <th>Statut</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for consultation in consultations %}
                                <tr>
                                    <td>{{ consultation.id }}</td>
                                    <td>
                                        {% if is_granted('ROLE_PHYSICIAN') %}
                                            {{ consultation.patient.username }}
                                        {% else %}
                                            Dr. {{ consultation.medecin.username }}
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if consultation.type == 'EN_LIGNE' %}
                                            <span class="badge bg-info">üìπ En ligne</span>
                                        {% else %}
                                            <span class="badge bg-secondary">üè• Cabinet</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ consultation.dateDebut|date('d/m/Y H:i') }}</td>
                                    <td>
                                        {% if consultation.status == 'EN_ATTENTE' %}
                                            <span class="badge bg-warning">En attente</span>
                                        {% elseif consultation.status == 'EN_COURS' %}
                                            <span class="badge bg-primary">En cours</span>
                                        {% elseif consultation.status == 'TERMINEE' %}
                                            <span class="badge bg-success">Termin√©e</span>
                                        {% else %}
                                            <span class="badge bg-danger">Annul√©e</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_consultation_show', {id: consultation.id}) }}" class="btn btn-sm btn-outline-primary">
                                            Voir
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}