{% extends 'base.html.twig' %}

{% block title %}Demander une consultation{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">üìÖ Demander une consultation</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('demander_consultation') }}">

                        <div class="mb-3">
                            <label for="medecin_id" class="form-label">Choisir un m√©decin *</label>
                            <select name="medecin_id" id="medecin_id" class="form-select" required>
                                <option value="">-- S√©lectionner un m√©decin --</option>
                                {% for medecin in medecins %}
                                    <option value="{{ medecin.id }}">
                                        Dr. {{ medecin.username }} - {{ medecin.email }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Type de consultation *</label>
                            <div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="type" id="type_enligne" value="EN_LIGNE" checked>
                                    <label class="form-check-label" for="type_enligne">
                                        üìπ En ligne
                                    </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="type" id="type_cabinet" value="CABINET">
                                    <label class="form-check-label" for="type_cabinet">
                                        üè• Cabinet
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="notes" class="form-label">Notes / Sympt√¥mes</label>
                            <textarea name="notes" id="notes" class="form-control" rows="4" placeholder="D√©crivez vos sympt√¥mes..."></textarea>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                ‚úÖ Demander la consultation
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {# Ne charger que Bootstrap JS, pas main.js #}
    <script src="{{ asset('assets/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
{% endblock %}