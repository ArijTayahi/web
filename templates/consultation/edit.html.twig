{% extends 'base.html.twig' %}

{% block title %}Modifier consultation{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">‚úèÔ∏è Modifier la consultation</h4>
        </div>

        <div class="card-body">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.type) }}
                {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.type) }}
            </div>

            {% if is_granted('ROLE_PATIENT') %}
                <div class="mb-3">
                    {{ form_label(form.dateDebut) }}
                    {{ form_widget(form.dateDebut, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.dateDebut) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.medecin) }}
                    {{ form_widget(form.medecin, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.medecin) }}
                </div>
            {% endif %}

            {% if is_granted('ROLE_PHYSICIAN') %}
                <div class="mb-3">
                    {{ form_label(form.status) }}
                    {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.status) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.diagnostic) }}
                    {{ form_widget(form.diagnostic, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.diagnostic) }}
                </div>
            {% endif %}

            <div class="mb-3">
                {{ form_label(form.notes) }}
                {{ form_widget(form.notes, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.notes) }}
            </div>

            <div class="d-flex gap-2">
                <button class="btn btn-primary">
                    üíæ Enregistrer
                </button>

                <a href="{{ path('app_mes_consultations') }}" class="btn btn-secondary">
                    ‚Ü©Ô∏è Retour
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
