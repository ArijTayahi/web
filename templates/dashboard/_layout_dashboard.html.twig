<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Dashboard - MedTime{% endblock %}</title>
    <link href="{{ asset('assets/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/vendor/bootstrap-icons/bootstrap-icons.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet">
    <link href="{{ asset('assets/css/main.css') }}" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --sidebar-width: 296px;
            --blue-pure: #1d4ed8;
            --blue-600: #2563eb;
            --blue-light: #eff6ff;
            --blue-ghost: #f5f7ff;
            --blue-text: #1e3a8a;
            --gray-subtle: #94a3b8;
            --gray-700: #334155;
            --radius-xl: 32px;
            --radius-lg: 24px;
            --radius-md: 18px;
        }

        body {
            background: #f8fafc;
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            margin: 0;
            color: #1e293b;
        }

        .dashboard-layout { 
            display: flex; 
            min-height: 100vh; 
            padding: 24px; 
            gap: 24px; 
            background: #f6f8fb;
        }
    
    .sidebar { 
        width: var(--sidebar-width); 
        background: #ffffff; 
        border-radius: var(--radius-xl);
        display: flex;
        flex-direction: column;
        padding: 32px 26px;
        box-shadow: 0 20px 40px -30px rgba(15, 23, 42, 0.35);
        height: calc(100vh - 48px);
        position: sticky;
        top: 24px;
        border: 1px solid #eef2f7;
    }

    .sidebar .sidebar-link { 
        color: var(--gray-700); 
        text-decoration: none; 
        display: flex; 
        align-items: center; 
        padding: 14px 18px; 
        border-radius: var(--radius-md); 
        margin: 6px 0; 
        font-weight: 600; 
        transition: all 0.2s ease;
        font-size: 0.95rem;
        background: transparent;
    }

    .sidebar .sidebar-link i { 
        width: 24px; 
        font-size: 1.05rem;
        margin-right: 12px;
        color: #7c8aa5;
    }

    .sidebar .sidebar-link:hover { 
        background: var(--blue-ghost); 
        color: var(--blue-pure); 
    }

    .sidebar .sidebar-link.active { 
        background: linear-gradient(135deg, var(--blue-pure), var(--blue-600)); 
        color: #ffffff; 
        box-shadow: 0 14px 30px -18px rgba(37, 99, 235, 0.55);
    }

    .sidebar .sidebar-link.active i { color: #ffffff; }

    .main-content { 
        flex: 1; 
        background: #ffffff;
        border-radius: var(--radius-xl);
        box-shadow: 0 20px 40px -32px rgba(15, 23, 42, 0.35);
        overflow: hidden;
        display: flex; 
        flex-direction: column; 
        border: 1px solid #eef2f7;
        min-height: calc(100vh - 48px);
    }

    .top-nav { 
        background: #ffffff; 
        border-bottom: 1px solid #eef2f7; 
        padding: 22px 36px; 
        display: flex; 
        align-items: center; 
        justify-content: space-between; 
    }

    .profile-card {
        background: #f8fafc;
        border: 1px solid #eef2f7;
        border-radius: var(--radius-lg);
        padding: 16px !important;
        transition: all 0.2s;
        box-shadow: inset 0 0 0 1px rgba(15, 23, 42, 0.02);
    }

    .profile-card:hover {
        background: #f2f6ff;
        border-color: #e3eaf5;
    }

    .content-body { padding: 36px; flex: 1; overflow-y: auto; }

    @media (max-width: 992px) {
        .dashboard-layout { padding: 0; }
        .sidebar { display: none; }
        .main-content { border-radius: 0; }
    }
</style>

<div class="dashboard-layout">
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-brand mb-5 px-3">
            <div class="d-flex align-items-center gap-2">
                <div class="bg-primary rounded-3 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; background-color: var(--blue-pure) !important;">
                    <i class="fas fa-stethoscope text-white"></i>
                </div>
                <div>
                    <h5 class="fw-bold mb-0 text-dark" style="letter-spacing: -0.5px;">MedTime</h5>
                    <div style="font-size: 10px; color: var(--gray-subtle); letter-spacing: 1px; text-uppercase: uppercase; font-weight: 700;">
                        {% if is_granted('ROLE_PHYSICIAN') %}Care Provider{% else %}Patient Portal{% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="flex-grow-1">
            <div class="mb-3 px-3 text-uppercase text-muted" style="font-size: 11px; font-weight: 700; letter-spacing: 1.2px; opacity: 0.6;">Menu</div>
            
            {% if is_granted('ROLE_PHYSICIAN') %}
                <a class="sidebar-link {% if app.request.attributes.get('_route') == 'app_doctor_dashboard' %}active{% endif %}" href="{{ path('app_doctor_dashboard') }}">
                    <i class="fas fa-th-large"></i>Overview
                </a>
                <a class="sidebar-link {% if app.request.attributes.get('_route') == 'app_doctor_appointments' %}active{% endif %}" href="{{ path('app_doctor_appointments') }}">
                    <i class="fas fa-calendar-alt"></i>Appointments
                </a>
                <a class="sidebar-link {% if app.request.attributes.get('_route') == 'app_doctor_verification' %}active{% endif %}" href="{{ path('app_doctor_verification') }}">
                    <i class="fas fa-shield-alt"></i>Verification
                </a>
                <a class="sidebar-link {% if app.request.attributes.get('_route') == 'app_doctor_patients' %}active{% endif %}" href="{{ path('app_doctor_patients') }}">
                    <i class="fas fa-user-injured"></i>My Patients
                </a>
            {% else %}
                <a class="sidebar-link {% if app.request.attributes.get('_route') == 'app_patient_dashboard' %}active{% endif %}" href="{{ path('app_patient_dashboard') }}">
                    <i class="fas fa-home"></i>Health Space
                </a>
                <a class="sidebar-link {% if app.request.attributes.get('_route') == 'app_find_doctor' %}active{% endif %}" href="{{ path('app_find_doctor') }}">
                    <i class="fas fa-user-md"></i>Find Doctors
                </a>
                <a class="sidebar-link {% if app.request.attributes.get('_route') == 'app_patient_appointments' %}active{% endif %}" href="{{ path('app_patient_appointments') }}">
                    <i class="fas fa-calendar-check"></i>My Visits
                </a>
            {% endif %}

            <div class="mt-4 mb-3 px-3 text-uppercase text-muted" style="font-size: 11px; font-weight: 700; letter-spacing: 1.2px; opacity: 0.6;">Account</div>
            <a class="sidebar-link {% if app.request.attributes.get('_route') == 'app_profile_edit' %}active{% endif %}" href="{{ path('app_profile_edit') }}">
                <i class="fas fa-user-circle"></i>My Profile
            </a>
        </div>

        <div class="mt-auto pt-4">
            <div class="profile-card p-3 rounded-4 d-flex align-items-center gap-3">
                <div class="profile-avatar rounded-circle bg-white d-flex align-items-center justify-content-center shadow-sm" style="width: 44px; height: 44px; border: 2px solid #fff;">
                    {% set avatarUrl = 'https://ui-avatars.com/api/?name=' ~ (app.user.username|url_encode) ~ '&background=1d4ed8&color=fff' %}
                    <img src="{{ avatarUrl }}" class="rounded-circle" width="38" height="38" alt="{{ app.user.username }}">
                </div>
                <div class="min-w-0 flex-grow-1">
                    <div class="fw-bold text-dark text-truncate" style="font-size: 14px;">{{ app.user ? app.user.username : 'User' }}</div>
                    <div style="font-size: 12px; color: var(--gray-subtle);">
                         {% if is_granted('ROLE_PHYSICIAN') %}Medical Doctor{% else %}Member{% endif %}
                    </div>
                </div>
                <a href="{{ path('app_logout') }}" class="text-muted p-1 hover-text-danger transition-all" title="Logout">
                    <i class="fas fa-sign-out-alt"></i>
                </a>
            </div>
        </div>
    </aside>

    <!-- Main Content -->
    <div class="main-content">
        <header class="top-nav">
            <div class="d-flex align-items-center gap-3">
                <h5 class="fw-bold mb-0 text-dark">
                    {% block dashboard_title %}Dashboard{% endblock %}
                </h5>
            </div>
            
            <div class="d-flex align-items-center gap-3">
                <div class="text-end d-none d-md-block">
                    <div class="fw-bold text-dark" style="font-size: 13px;">{{ "now"|date("l, d M Y") }}</div>
                    <div style="font-size: 11px; color: var(--gray-subtle); font-weight: 600;">PLATFORM LIVE</div>
                </div>
                <div class="bg-light p-2 rounded-circle text-primary ms-2">
                    <i class="fas fa-bell"></i>
                </div>
            </div>
        </header>

        <div class="content-body">
            {# Flash Messages #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show rounded-4 border-0 shadow-sm mb-4" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-{{ label == 'success' ? 'check-circle' : 'exclamation-circle' }} me-2"></i>
                            <div>{{ message }}</div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block dashboard_content %}{% endblock %}
        </div>
    </div>
</div>

<style>
    .hover-text-danger:hover { color: #dc2626 !important; }
    .hover-text-primary:hover { color: var(--blue-pure) !important; }
</style>