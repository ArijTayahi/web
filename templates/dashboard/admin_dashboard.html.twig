{% extends 'admin/base_admin.html.twig' %}

{% block title %}Overview - Admin Dashboard{% endblock %}

{% block content %}
<!-- Welcome Section -->
<div class="d-flex justify-content-between align-items-end mb-5">
    <div>
        <h2 class="fw-bold text-dark mb-1">Platform Overview</h2>
        <p class="text-muted mb-0">Welcome back, {{ app.user ? app.user.username : 'Admin' }}. Here's what's happening today.</p>
    </div>
    <div class="d-flex gap-2">
         <button class="btn btn-white bg-white border shadow-sm rounded-pill px-4 fw-medium"><i class="fas fa-download me-2"></i>Export Report</button>
         <button class="btn btn-primary rounded-pill px-4 fw-medium shadow-lg" style="background: var(--primary-gradient); border: none;"><i class="fas fa-plus me-2"></i>Add Admin</button>
    </div>
</div>

<!-- Stat Cards Row -->
<div class="row g-4 mb-5">
    <!-- Total Users -->
    <div class="col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden text-white" style="background: linear-gradient(135deg, #4361ee 0%, #3a0ca3 100%);">
            <div class="card-body p-4 position-relative">
                <div class="d-flex justify-content-between align-items-start mb-4">
                    <div class="p-2 rounded-3 bg-white bg-opacity-25 backdrop-blur">
                        <i class="fas fa-users fs-4 text-white"></i>
                    </div>
                    <span class="badge bg-white text-primary rounded-pill fw-bold">+12%</span>
                </div>
                <h3 class="fw-bold mb-1">{{ totalUsers }}</h3>
                <p class="mb-0 opacity-75 small">Total Active Users</p>
                
                <!-- Decorative Circle -->
                <div class="position-absolute bg-white opacity-10 rounded-circle" style="width: 120px; height: 120px; top: -40px; right: -40px;"></div>
                <div class="position-absolute bg-white opacity-10 rounded-circle" style="width: 80px; height: 80px; bottom: -20px; left: 10px;"></div>
            </div>
        </div>
    </div>

    <!-- Active Doctors -->
    <div class="col-md-6 col-xl-3">
         <div class="card border-0 shadow-sm rounded-4 h-100 bg-white hover-up transition-all">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-start mb-4">
                     <div class="p-2 rounded-3 bg-soft-success text-success">
                        <i class="fas fa-heartbeat fs-4"></i>
                    </div>
                </div>
                <h3 class="fw-bold mb-1 text-dark">{{ verifiedDoctors }}</h3>
                <p class="mb-0 text-muted small">Verified Doctors</p>
                <div class="mt-3 pt-3 border-top border-light">
                    <span class="text-success small fw-bold"><i class="fas fa-arrow-up"></i> 5 new</span> <span class="text-muted small">this week</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Appointments -->
    <div class="col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm rounded-4 h-100 bg-white hover-up transition-all">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-start mb-4">
                     <div class="p-2 rounded-3 bg-soft-info text-info">
                        <i class="fas fa-calendar-check fs-4"></i>
                    </div>
                </div>
                <h3 class="fw-bold mb-1 text-dark">{{ totalAppointments }}</h3>
                <p class="mb-0 text-muted small">Total Appointments</p>
                <div class="mt-3 pt-3 border-top border-light">
                     <span class="text-info small fw-bold">85%</span> <span class="text-muted small">completion rate</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Verifications -->
    <div class="col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm rounded-4 h-100 bg-white hover-up transition-all">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-start mb-4">
                     <div class="p-2 rounded-3 bg-soft-warning text-warning">
                        <i class="fas fa-exclamation-triangle fs-4"></i>
                    </div>
                    <span class="badge bg-soft-warning text-warning rounded-pill">Action Needed</span>
                </div>
                <h3 class="fw-bold mb-1 text-dark">{{ pendingVerifications }}</h3>
                <p class="mb-0 text-muted small">Pending Verifications</p>
                 <div class="mt-3 pt-3 border-top border-light">
                    <a href="{{ path('app_admin_doctor_verifications') }}" class="text-decoration-none small fw-bold text-warning">Review Now <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Section: Quick Actions & Trends -->
<div class="row g-4">
    <!-- Registration Trend Chart -->
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm rounded-4 h-100 bg-white">
            <div class="card-header bg-transparent border-0 py-4 px-4 d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="fw-bold mb-0 text-dark">Registration Trends</h5>
                    <p class="text-muted small mb-0">User growth over time</p>
                </div>
                <div class="dropdown">
                    <button class="btn btn-light btn-sm rounded-pill px-3 dropdown-toggle text-muted" type="button" data-bs-toggle="dropdown">
                        Last 6 Months
                    </button>
                    <ul class="dropdown-menu border-0 shadow-sm rounded-3">
                        <li><a class="dropdown-item" href="#">Last Year</a></li>
                        <li><a class="dropdown-item" href="#">All Time</a></li>
                    </ul>
                </div>
            </div>
            <div class="card-body px-4 pb-4">
                <!-- CSS-only simple chart visualization -->
                <div class="d-flex align-items-end justify-content-between h-100 gap-2" style="min-height: 250px;">
                    <!-- Month 1 -->
                    <div class="w-100 d-flex flex-column align-items-center">
                        <div class="rounded-top-3 bg-primary bg-opacity-10 w-100 position-relative group-hover" style="height: 40%; transition: height 1s;">
                            <div class="position-absolute bottom-100 start-50 translate-middle-x mb-2 text-primary fw-bold small opacity-0 group-hover-show">40%</div>
                        </div>
                        <span class="text-muted small mt-2">Jan</span>
                    </div>
                    <!-- Month 2 -->
                     <div class="w-100 d-flex flex-column align-items-center">
                         <div class="rounded-top-3 bg-primary bg-opacity-25 w-100" style="height: 55%;"></div>
                        <span class="text-muted small mt-2">Feb</span>
                    </div>
                    <!-- Month 3 -->
                     <div class="w-100 d-flex flex-column align-items-center">
                         <div class="rounded-top-3 bg-primary bg-opacity-50 w-100" style="height: 45%;"></div>
                        <span class="text-muted small mt-2">Mar</span>
                    </div>
                    <!-- Month 4 -->
                     <div class="w-100 d-flex flex-column align-items-center">
                         <div class="rounded-top-3 bg-primary bg-opacity-75 w-100" style="height: 70%;"></div>
                        <span class="text-muted small mt-2">Apr</span>
                    </div>
                    <!-- Month 5 -->
                     <div class="w-100 d-flex flex-column align-items-center">
                         <div class="rounded-top-3 bg-primary w-100" style="height: 60%;"></div>
                        <span class="text-muted small mt-2">May</span>
                    </div>
                     <!-- Month 6 -->
                     <div class="w-100 d-flex flex-column align-items-center">
                         <div class="rounded-top-3 bg-primary w-100 shadow-sm" style="height: 85%; background: var(--primary-gradient);"></div>
                        <span class="fw-bold text-primary small mt-2">Jun</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Side -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm rounded-4 h-100 bg-white">
            <div class="card-header bg-transparent border-0 py-4 px-4">
                <h5 class="fw-bold mb-0 text-dark">Quick Actions</h5>
                <p class="text-muted small mb-0">Common management tasks</p>
            </div>
            <div class="card-body px-4">
                <div class="d-grid gap-3">
                     <a href="{{ path('app_admin_users') }}" class="btn btn-light py-3 px-3 text-start rounded-3 d-flex align-items-center hover-bg-primary-subtle transition-all">
                        <div class="bg-white p-2 rounded-circle shadow-sm text-primary me-3">
                            <i class="fas fa-user-cog fs-5"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0 text-dark">User Management</h6>
                            <small class="text-muted">Edit, ban, or verify users</small>
                        </div>
                        <i class="fas fa-chevron-right ms-auto text-muted"></i>
                     </a>

                     <a href="{{ path('app_admin_appointments') }}" class="btn btn-light py-3 px-3 text-start rounded-3 d-flex align-items-center hover-bg-primary-subtle transition-all">
                        <div class="bg-white p-2 rounded-circle shadow-sm text-info me-3">
                             <i class="fas fa-calendar-alt fs-5"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0 text-dark">Appointments</h6>
                            <small class="text-muted">Review upcoming visits</small>
                        </div>
                         <i class="fas fa-chevron-right ms-auto text-muted"></i>
                     </a>

                     <a href="{{ path('app_admin_settings') }}" class="btn btn-light py-3 px-3 text-start rounded-3 d-flex align-items-center hover-bg-primary-subtle transition-all">
                        <div class="bg-white p-2 rounded-circle shadow-sm text-warning me-3">
                             <i class="fas fa-sliders-h fs-5"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-0 text-dark">System Settings</h6>
                            <small class="text-muted">Configure platform</small>
                        </div>
                         <i class="fas fa-chevron-right ms-auto text-muted"></i>
                     </a>
                </div>
            </div>
            <div class="card-footer bg-light border-0 py-3 text-center mx-4 mb-4 rounded-3">
                <small class="text-muted d-block mb-2">Need to announce something?</small>
                <button class="btn btn-outline-primary btn-sm rounded-pill px-4 fw-bold">Create Announcement</button>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-soft-success { background-color: rgba(25, 135, 84, 0.1); }
    .bg-soft-info { background-color: rgba(13, 202, 240, 0.1); }
    .bg-soft-warning { background-color: rgba(255, 193, 7, 0.1); }
    
    .hover-up:hover { transform: translateY(-5px); }
    .transition-all { transition: all 0.3s ease; }
    
    .hover-bg-primary-subtle:hover { 
        background-color: rgba(67, 97, 238, 0.05) !important;
        border-color: transparent;
    }
</style>
{% endblock %}
