{{ form_start(form, {'attr': {'class': 'form-layout rendez-vous-form', 'novalidate': true}}) }}

    <!-- Appointment DateTime -->
    <div class="mb-4">
        <label class="form-label fw-bold text-dark">Appointment Date & Time <span class="text-danger">*</span></label>
        {{ form_widget(form.appointmentDateTime, {'attr': {'class': 'form-control form-control-lg', 'required': true}}) }}
        {% if form.appointmentDateTime.vars.errors|length > 0 %}
            <div class="alert alert-danger small mt-2 mb-0">
                {% for error in form.appointmentDateTime.vars.errors %}
                    {{ error.message }}
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <div class="row">
        <!-- Duration -->
        <div class="col-md-6 mb-4">
            <label class="form-label fw-bold text-dark">Duration (minutes) <span class="text-danger">*</span></label>
            {{ form_widget(form.duration, {'attr': {'class': 'form-control form-control-lg', 'type': 'number', 'required': true, 'min': '15', 'step': '15'}}) }}
            <small class="d-block mt-2 text-muted">e.g., 30, 45, 60 minutes</small>
        </div>

        <!-- Reminder Sent -->
        <div class="col-md-6 mb-4">
            <div class="form-check form-switch mt-4">
                {{ form_widget(form.reminderSent, {'attr': {'class': 'form-check-input', 'role': 'switch'}}) }}
                <label class="form-check-label" for="{{ form.reminderSent.vars.id }}">
                    Reminder Sent
                </label>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Status -->
        <div class="col-md-6 mb-4">
            <label class="form-label fw-bold text-dark">Status <span class="text-danger">*</span></label>
            {{ form_widget(form.status, {'attr': {'class': 'form-select form-select-lg', 'required': true}}) }}
            {% if form.status.vars.errors|length > 0 %}
                <div class="alert alert-danger small mt-2 mb-0">
                    {% for error in form.status.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <!-- Consultation Type -->
        <div class="col-md-6 mb-4">
            <label class="form-label fw-bold text-dark">Consultation Type <span class="text-danger">*</span></label>
            {{ form_widget(form.consultationType, {'attr': {'class': 'form-select form-select-lg', 'required': true}}) }}
            {% if form.consultationType.vars.errors|length > 0 %}
                <div class="alert alert-danger small mt-2 mb-0">
                    {% for error in form.consultationType.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Reason -->
    <div class="mb-4">
        <label class="form-label fw-bold text-dark">Reason for Consultation</label>
        {{ form_widget(form.reason, {'attr': {'class': 'form-control form-control-lg', 'rows': '3'}}) }}
        <small class="d-block mt-2 text-muted">Describe the reason for this medical appointment</small>
    </div>

    <!-- Notes -->
    <div class="mb-4">
        <label class="form-label fw-bold text-dark">Additional Notes</label>
        {{ form_widget(form.notes, {'attr': {'class': 'form-control form-control-lg'}}) }}
    </div>

    <div class="row">
        <!-- Doctor -->
        <div class="col-md-6 mb-4">
            <label class="form-label fw-bold text-dark">Doctor <span class="text-danger">*</span></label>
            {{ form_widget(form.doctor, {'attr': {'class': 'form-select form-select-lg', 'required': true}}) }}
            {% if form.doctor.vars.errors|length > 0 %}
                <div class="alert alert-danger small mt-2 mb-0">
                    {% for error in form.doctor.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <!-- Patient -->
        <div class="col-md-6 mb-4">
            <label class="form-label fw-bold text-dark">Patient <span class="text-danger">*</span></label>
            {{ form_widget(form.patient, {'attr': {'class': 'form-select form-select-lg', 'required': true}}) }}
            {% if form.patient.vars.errors|length > 0 %}
                <div class="alert alert-danger small mt-2 mb-0">
                    {% for error in form.patient.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

    <!-- Cancellation Risk -->
    <div class="mb-4">
        <label class="form-label fw-bold text-dark">Cancellation Risk (0-1)</label>
        {{ form_widget(form.cancellationRisk, {'attr': {'class': 'form-control form-control-lg', 'type': 'number', 'min': '0', 'max': '1', 'step': '0.1'}}) }}
        <small class="d-block mt-2 text-muted">Risk score from 0 (no risk) to 1 (high risk)</small>
    </div>

    <!-- Form Actions -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="d-flex gap-3 justify-content-between">
                <a href="{{ path('app_rendez_vous_index') }}" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left me-2"></i>Back to List
                </a>
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-circle me-2"></i>{{ button_label|default('Save') }}
                </button>
            </div>
        </div>
    </div>

{{ form_end(form) }}

<style>
    .form-label {
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
    }
    
    .form-control-lg,
    .form-select-lg {
        border-radius: 6px;
        border: 1px solid #d0d0d0;
        padding: 0.75rem 1rem;
    }
    
    .form-control:focus,
    .form-select:focus {
        border-color: #1E90FF;
        box-shadow: 0 0 0 0.2rem rgba(30, 144, 255, 0.25);
    }
    
    .btn-primary {
        background-color: #1E90FF;
        border-color: #1E90FF;
    }
    
    .btn-primary:hover {
        background-color: #1873CC;
        border-color: #1873CC;
    }
    
    .text-muted {
        color: #6c757d !important;
    }
    
    .text-danger {
        color: #dc3545 !important;
    }
    
    .alert {
        padding: 0.5rem 0.75rem;
        margin-bottom: 0;
    }
</style>