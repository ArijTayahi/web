<form method="post" action="{{ path('app_rendez_vous_delete', {'id': rendez_vou.id}) }}" style="display: none;" id="deleteForm">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rendez_vou.id) }}">
</form>

<div class="mt-4 pt-4 border-top">
    <button type="button" class="btn btn-outline-danger" onclick="if(confirm('Are you sure you want to delete this appointment?')) { document.getElementById('deleteForm').style.display='block'; document.getElementById('deleteForm').submit(); }">
        <i class="bi bi-trash me-2"></i>Delete This Appointment
    </button>
</div>

<style>
    .btn-outline-danger:hover {
        background-color: #dc3545;
        border-color: #dc3545;
        color: white;
    }
</style>