{% extends 'base.html.twig' %}

{% block title %}RendezVous index{% endblock %}

{% block body %}
    <h1>RendezVous index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>AppointmentDateTime</th>
                <th>Duration</th>
                <th>Status</th>
                <th>ConsultationType</th>
                <th>Reason</th>
                <th>Notes</th>
                <th>ReminderSent</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>CancellationRisk</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for rendez_vou in rendez_vouses %}
            <tr>
                <td>{{ rendez_vou.id }}</td>
                <td>{{ rendez_vou.appointmentDateTime ? rendez_vou.appointmentDateTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ rendez_vou.duration }}</td>
                <td>{{ rendez_vou.status }}</td>
                <td>{{ rendez_vou.consultationType }}</td>
                <td>{{ rendez_vou.reason }}</td>
                <td>{{ rendez_vou.notes }}</td>
                <td>{{ rendez_vou.reminderSent ? 'Yes' : 'No' }}</td>
                <td>{{ rendez_vou.createdAt ? rendez_vou.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ rendez_vou.updatedAt ? rendez_vou.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ rendez_vou.cancellationRisk }}</td>
                <td>
                    <a href="{{ path('app_rendez_vous_show', {'id': rendez_vou.id}) }}">show</a>
                    <a href="{{ path('app_rendez_vous_edit', {'id': rendez_vou.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rendez_vous_new') }}">Create new</a>
{% endblock %}
