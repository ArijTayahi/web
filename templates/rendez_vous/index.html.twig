{% extends 'base.html.twig' %}

{% block title %}Gestion des Rendez-vous - MedTime{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold text-primary mb-2">
                <i class="fas fa-calendar-check me-2"></i>Gestion des Rendez-vous
            </h1>
            <p class="text-muted mb-0">Gérez tous les rendez-vous médicaux et consultations</p>
        </div>
        <a href="{{ path('app_rendez_vous_new') }}" class="btn btn-medical btn-lg shadow-medical">
            <i class="fas fa-plus me-2"></i>Nouveau Rendez-vous
        </a>
    </div>

    <!-- Search & Filter Section -->
    <div class="card card-medical mb-4">
        <div class="card-body">
            <form method="GET" class="row g-3">
                <div class="col-md-6">
                    <label for="search" class="form-label fw-bold">
                        <i class="fas fa-search text-medical-primary me-2"></i>Rechercher
                    </label>
                    <input type="text" class="form-control" id="search" name="search"
                           placeholder="Rechercher par médecin, patient ou motif..."
                           value="{{ search }}">
                </div>

                <div class="col-md-3">
                    <label for="status" class="form-label fw-bold">
                        <i class="fas fa-filter text-medical-primary me-2"></i>Statut
                    </label>
                    <select class="form-select" id="status" name="status">
                        <option value="">Tous</option>
                        <option value="PENDING" {% if statusFilter == 'PENDING' %}selected{% endif %}>En attente</option>
                        <option value="CONFIRMED" {% if statusFilter == 'CONFIRMED' %}selected{% endif %}>Confirmé</option>
                        <option value="CANCELLED" {% if statusFilter == 'CANCELLED' %}selected{% endif %}>Annulé</option>
                        <option value="COMPLETED" {% if statusFilter == 'COMPLETED' %}selected{% endif %}>Terminé</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label for="type" class="form-label fw-bold">
                        <i class="fas fa-video text-medical-primary me-2"></i>Type
                    </label>
                    <select class="form-select" id="type" name="type">
                        <option value="">Tous</option>
                        <option value="IN_PERSON" {% if typeFilter == 'IN_PERSON' %}selected{% endif %}>En personne</option>
                        <option value="ONLINE" {% if typeFilter == 'ONLINE' %}selected{% endif %}>En ligne</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label for="sortBy" class="form-label fw-bold">
                        <i class="fas fa-sort text-medical-primary me-2"></i>Trier par
                    </label>
                    <select class="form-select" id="sortBy" name="sortBy">
                        <option value="appointmentDateTime" {% if sortBy == 'appointmentDateTime' %}selected{% endif %}>Date & Heure</option>
                        <option value="doctor" {% if sortBy == 'doctor' %}selected{% endif %}>Médecin</option>
                        <option value="patient" {% if sortBy == 'patient' %}selected{% endif %}>Patient</option>
                        <option value="status" {% if sortBy == 'status' %}selected{% endif %}>Statut</option>
                        <option value="duration" {% if sortBy == 'duration' %}selected{% endif %}>Durée</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label for="sortOrder" class="form-label fw-bold">Ordre</label>
                    <select class="form-select" id="sortOrder" name="sortOrder">
                        <option value="DESC" {% if sortOrder == 'DESC' %}selected{% endif %}>Décroissant</option>
                        <option value="ASC" {% if sortOrder == 'ASC' %}selected{% endif %}>Croissant</option>
                    </select>
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-medical me-2">
                        <i class="fas fa-search me-2"></i>Rechercher & Filtrer
                    </button>
                    <a href="{{ path('app_rendez_vous_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-undo me-2"></i>Réinitialiser
                    </a>
                </div>
            </form>
        </div>
    </div>

    <!-- Appointments Grid -->
    <div class="row g-4">
        {% for rendez_vou in rendez_vouses %}
            <div class="col-lg-6 col-xl-4">
                <div class="card card-medical h-100 animate-fade-in">
                    <div class="card-header bg-light border-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-medical-primary text-white">
                                <i class="fas fa-hashtag me-1"></i>{{ rendez_vou.id }}
                            </span>
                            <span class="badge
                                {% if rendez_vou.status.value == 'CONFIRMED' %}bg-success
                                {% elseif rendez_vou.status.value == 'CANCELLED' %}bg-danger
                                {% elseif rendez_vou.status.value == 'PENDING' %}bg-warning text-dark
                                {% elseif rendez_vou.status.value == 'COMPLETED' %}bg-secondary
                                {% else %}bg-dark{% endif %}">
                                {% if rendez_vou.status.value == 'CONFIRMED' %}
                                    <i class="fas fa-check-circle me-1"></i>
                                {% elseif rendez_vou.status.value == 'CANCELLED' %}
                                    <i class="fas fa-times-circle me-1"></i>
                                {% elseif rendez_vou.status.value == 'PENDING' %}
                                    <i class="fas fa-clock me-1"></i>
                                {% elseif rendez_vou.status.value == 'COMPLETED' %}
                                    <i class="fas fa-check-double me-1"></i>
                                {% else %}
                                    <i class="fas fa-question-circle me-1"></i>
                                {% endif %}
                                {% if rendez_vou.status.value == 'PENDING' %}En attente
                                {% elseif rendez_vou.status.value == 'CONFIRMED' %}Confirmé
                                {% elseif rendez_vou.status.value == 'CANCELLED' %}Annulé
                                {% elseif rendez_vou.status.value == 'COMPLETED' %}Terminé
                                {% else %}{{ rendez_vou.status.value }}{% endif %}
                            </span>
                        </div>
                    </div>

                    <div class="card-body">
                        <!-- Doctor Info -->
                        <div class="mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-user-md text-medical-primary me-2"></i>
                                <strong class="text-dark">Médecin</strong>
                            </div>
                            <p class="mb-0 text-muted">
                                {{ rendez_vou.doctor.username ?? rendez_vou.doctor.email }}
                            </p>
                        </div>

                        <!-- Patient Info -->
                        <div class="mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-user-injured text-medical-primary me-2"></i>
                                <strong class="text-dark">Patient</strong>
                            </div>
                            <p class="mb-0 text-muted">
                                {{ rendez_vou.patient.username ?? rendez_vou.patient.email }}
                            </p>
                        </div>

                        <!-- Date & Time -->
                        <div class="mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-calendar-alt text-medical-primary me-2"></i>
                                <strong class="text-dark">Date & Heure</strong>
                            </div>
                            <p class="mb-0 text-muted">
                                {{ rendez_vou.appointmentDateTime ? rendez_vou.appointmentDateTime|date('d/m/Y à H:i') : 'Non défini' }}
                            </p>
                        </div>

                        <!-- Type & Duration -->
                        <div class="row">
                            <div class="col-6">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-tag text-medical-primary me-2"></i>
                                    <strong class="text-dark small">Type</strong>
                                </div>
                                <span class="badge
                                    {% if rendez_vou.consultationType.value == 'IN_PERSON' %}bg-success
                                    {% else %}bg-info{% endif %}">
                                    {% if rendez_vou.consultationType.value == 'IN_PERSON' %}
                                        <i class="fas fa-building me-1"></i>Présentiel
                                    {% else %}
                                        <i class="fas fa-video me-1"></i>En ligne
                                    {% endif %}
                                </span>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="fas fa-clock text-medical-primary me-2"></i>
                                    <strong class="text-dark small">Durée</strong>
                                </div>
                                <span class="badge bg-light text-dark border">
                                    {{ rendez_vou.duration }} min
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-transparent border-0">
                        <div class="d-flex gap-2 flex-wrap">
                            <a href="{{ path('app_rendez_vous_show', {'id': rendez_vou.id}) }}"
                               class="btn btn-outline-primary btn-sm flex-fill">
                                <i class="fas fa-eye me-1"></i>Voir
                            </a>

                            <a href="{{ path('app_rendez_vous_edit', {'id': rendez_vou.id}) }}"
                               class="btn btn-outline-warning btn-sm flex-fill">
                                <i class="fas fa-edit me-1"></i>Modifier
                            </a>

                            <button type="button" class="btn btn-outline-danger btn-sm flex-fill"
                                    data-bs-toggle="modal" data-bs-target="#deleteModal{{ rendez_vou.id }}">
                                <i class="fas fa-trash me-1"></i>Supprimer
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delete Modal -->
            <div class="modal fade" id="deleteModal{{ rendez_vou.id }}" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header border-danger">
                            <h5 class="modal-title" id="deleteModalLabel">Confirmer la suppression</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                        </div>
                        <div class="modal-body">
                            <p>Êtes-vous sûr de vouloir supprimer ce rendez-vous ?</p>
                            <p class="text-muted small">Cette action ne peut pas être annulée.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                            <form method="post" action="{{ path('app_rendez_vous_delete', {'id': rendez_vou.id}) }}" style="display: inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rendez_vou.id) }}">
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <!-- Empty State -->
            <div class="col-12">
                <div class="card card-medical text-center py-5">
                    <div class="card-body">
                        <i class="fas fa-calendar-times fa-4x text-muted mb-4"></i>
                        <h4 class="text-muted mb-3">Aucun rendez-vous trouvé</h4>
                        <p class="text-muted mb-4">
                            Il n'y a encore aucun rendez-vous programmé.
                            Créez le premier rendez-vous maintenant.
                        </p>
                        <a href="{{ path('app_rendez_vous_new') }}" class="btn btn-medical">
                            <i class="fas fa-plus me-2"></i>Créer un rendez-vous
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<style>
    .animate-fade-in {
        animation: fadeInUp 0.6s ease-out;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .card-medical:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(30, 144, 255, 0.15);
    }

    .btn-medical {
        background: linear-gradient(135deg, #1E90FF 0%, #007bff 100%);
        border: none;
        color: white;
        transition: all 0.3s ease;
    }

    .btn-medical:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(30, 144, 255, 0.3);
        color: white;
    }
</style>
{% endblock %}
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light p-4 border-bottom">
                        <h5 class="mb-0">{{ rendez_vouses|length }} Appointment(s) Found</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="px-4 py-3">Doctor</th>
                                        <th class="px-4 py-3">Patient</th>
                                        <th class="px-4 py-3">Date & Time</th>
                                        <th class="px-4 py-3">Type</th>
                                        <th class="px-4 py-3">Status</th>
                                        <th class="px-4 py-3">Duration</th>
                                        <th class="px-4 py-3 text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for rendez_vou in rendez_vouses %}
                                        <tr class="align-middle">
                                            <td class="px-4 py-3">
                                                <strong>{{ rendez_vou.doctor.username ?? rendez_vou.doctor.email }}</strong>
                                            </td>
                                            <td class="px-4 py-3">
                                                <span class="text-muted">{{ rendez_vou.patient.username ?? rendez_vou.patient.email }}</span>
                                            </td>
                                            <td class="px-4 py-3">
                                                <i class="bi bi-calendar-event me-2"></i>
                                                {{ rendez_vou.appointmentDateTime ? rendez_vou.appointmentDateTime|date('d/m/Y H:i') : 'N/A' }}
                                            </td>
                                            <td class="px-4 py-3">
                                                {% if rendez_vou.consultationType.value == 'IN_PERSON' %}
                                                    <span class="badge bg-success">In-Person</span>
                                                {% else %}
                                                    <span class="badge bg-info">Online</span>
                                                {% endif %}
                                            </td>
                                            <td class="px-4 py-3">
                                                {% if rendez_vou.status.value == 'PENDING' %}
                                                    <span class="badge bg-warning">Pending</span>
                                                {% elseif rendez_vou.status.value == 'CONFIRMED' %}
                                                    <span class="badge bg-success">Confirmed</span>
                                                {% elseif rendez_vou.status.value == 'CANCELLED' %}
                                                    <span class="badge bg-danger">Cancelled</span>
                                                {% elseif rendez_vou.status.value == 'COMPLETED' %}
                                                    <span class="badge bg-secondary">Completed</span>
                                                {% else %}
                                                    <span class="badge bg-dark">{{ rendez_vou.status.value }}</span>
                                                {% endif %}
                                            </td>
                                            <td class="px-4 py-3">
                                                {{ rendez_vou.duration }} min
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('app_rendez_vous_show', {'id': rendez_vou.id}) }}" class="btn btn-sm btn-outline-info" title="View">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_rendez_vous_edit', {'id': rendez_vou.id}) }}" class="btn btn-sm btn-outline-warning" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ rendez_vou.id }}" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>

                                        <!-- Delete Modal -->
                                        <div class="modal fade" id="deleteModal{{ rendez_vou.id }}" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header border-danger">
                                                        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to delete this appointment?</p>
                                                        <p class="text-muted small">This action cannot be undone.</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form method="post" action="{{ path('app_rendez_vous_delete', {'id': rendez_vou.id}) }}" style="display: inline;">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rendez_vou.id) }}">
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-info-circle me-3 fs-5"></i>
                        <div>
                            <h5 class="alert-heading mb-1">No Appointments Found</h5>
                            <p class="mb-0">There are no appointments scheduled yet. <a href="{{ path('app_rendez_vous_new') }}" class="alert-link">Create one now</a></p>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </section>
</main>

<style>
    .breadcrumb-section {
        border-bottom: 1px solid #e0e0e0;
    }
    
    .page-header h1 {
        color: #1E90FF;
    }
    
    .btn-primary {
        background-color: #1E90FF;
        border-color: #1E90FF;
    }
    
    .btn-primary:hover {
        background-color: #1873CC;
        border-color: #1873CC;
    }
    
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
    
    .badge {
        font-weight: 500;
        padding: 0.5rem 0.75rem;
    }
    
    .btn-group .btn {
        border-radius: 4px;
        margin: 0 2px;
    }
</style>
{% endblock %}