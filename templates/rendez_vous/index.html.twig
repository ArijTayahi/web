{% extends 'base.html.twig' %}

{% block title %}Doctor Appointments - MedTime{% endblock %}

{% block body %}
<main class="main">
    <!-- Breadcrumb Section -->
    <div class="breadcrumb-section pt-4 pb-4" style="background-color: #f8f9fa;">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}" style="color: #1E90FF;">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Doctor Appointments</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Page Header -->
    <section class="page-header py-5">
        <div class="container">
            <div class="row align-items-center mb-4">
                <div class="col-lg-8">
                    <h1 class="h2 fw-bold mb-2">Doctor Appointments</h1>
                    <p class="text-muted">Manage all medical appointments and consultations</p>
                </div>
                <div class="col-lg-4 text-end">
                    <a href="{{ path('app_rendez_vous_new') }}" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>New Appointment
                    </a>
                </div>
            </div>

            <!-- Search & Filter Section -->
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-6">
                            <label for="search" class="form-label">üîç Search Appointment</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   placeholder="Search by doctor, patient or reason..." 
                                   value="{{ search }}">
                        </div>

                        <div class="col-md-3">
                            <label for="status" class="form-label">üìä Filter by Status</label>
                            <select class="form-select" id="status" name="status">
                                <option value="">All</option>
                                <option value="PENDING" {% if statusFilter == 'PENDING' %}selected{% endif %}>Pending</option>
                                <option value="CONFIRMED" {% if statusFilter == 'CONFIRMED' %}selected{% endif %}>Confirmed</option>
                                <option value="CANCELLED" {% if statusFilter == 'CANCELLED' %}selected{% endif %}>Cancelled</option>
                                <option value="COMPLETED" {% if statusFilter == 'COMPLETED' %}selected{% endif %}>Completed</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label for="type" class="form-label">üí¨ Filter by Type</label>
                            <select class="form-select" id="type" name="type">
                                <option value="">All</option>
                                <option value="IN_PERSON" {% if typeFilter == 'IN_PERSON' %}selected{% endif %}>In-Person</option>
                                <option value="ONLINE" {% if typeFilter == 'ONLINE' %}selected{% endif %}>Online</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label for="sortBy" class="form-label">‚¨ÜÔ∏è Sort By</label>
                            <select class="form-select" id="sortBy" name="sortBy">
                                <option value="appointmentDateTime" {% if sortBy == 'appointmentDateTime' %}selected{% endif %}>Date & Time</option>
                                <option value="doctor" {% if sortBy == 'doctor' %}selected{% endif %}>Doctor Name</option>
                                <option value="patient" {% if sortBy == 'patient' %}selected{% endif %}>Patient Name</option>
                                <option value="status" {% if sortBy == 'status' %}selected{% endif %}>Status</option>
                                <option value="duration" {% if sortBy == 'duration' %}selected{% endif %}>Duration</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label for="sortOrder" class="form-label">Order</label>
                            <select class="form-select" id="sortOrder" name="sortOrder">
                                <option value="DESC" {% if sortOrder == 'DESC' %}selected{% endif %}>Descending</option>
                                <option value="ASC" {% if sortOrder == 'ASC' %}selected{% endif %}>Ascending</option>
                            </select>
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search me-2"></i>Search & Filter
                            </button>
                            <a href="{{ path('app_rendez_vous_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-counterclockwise me-2"></i>Reset
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Appointments Table Section -->
    <section class="appointments-section py-5">
        <div class="container">
            {% if rendez_vouses|length > 0 %}
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light p-4 border-bottom">
                        <h5 class="mb-0">‚úÖ {{ rendez_vouses|length }} Appointment(s) Found</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="px-4 py-3">Doctor</th>
                                        <th class="px-4 py-3">Patient</th>
                                        <th class="px-4 py-3">
                                            <a href="?search={{ search }}&sortBy=appointmentDateTime&sortOrder={% if sortBy == 'appointmentDateTime' and sortOrder == 'DESC' %}ASC{% else %}DESC{% endif %}" style="text-decoration: none; color: inherit;">
                                                Date & Time {% if sortBy == 'appointmentDateTime' %}<i class="bi bi-arrow-{% if sortOrder == 'DESC' %}down{% else %}up{% endif %}"></i>{% endif %}
                                            </a>
                                        </th>
                                        <th class="px-4 py-3">Type</th>
                                        <th class="px-4 py-3">Status</th>
                                        <th class="px-4 py-3">Duration</th>
                                        <th class="px-4 py-3 text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for rendez_vou in rendez_vouses %}
                                        <tr class="align-middle">
                                            <td class="px-4 py-3">
                                                <strong>{{ rendez_vou.doctor.username ?? rendez_vou.doctor.email }}</strong>
                                            </td>
                                            <td class="px-4 py-3">
                                                <span class="text-muted">{{ rendez_vou.patient.username ?? rendez_vou.patient.email }}</span>
                                            </td>
                                            <td class="px-4 py-3">
                                                <i class="bi bi-calendar-event me-2"></i>
                                                {{ rendez_vou.appointmentDateTime ? rendez_vou.appointmentDateTime|date('d/m/Y H:i') : 'N/A' }}
                                            </td>
                                            <td class="px-4 py-3">
                                                {% if rendez_vou.consultationType.value == 'IN_PERSON' %}
                                                    <span class="badge bg-success">In-Person</span>
                                                {% else %}
                                                    <span class="badge bg-info">Online</span>
                                                {% endif %}
                                            </td>
                                            <td class="px-4 py-3">
                                                {% if rendez_vou.status.value == 'PENDING' %}
                                                    <span class="badge bg-warning">Pending</span>
                                                {% elseif rendez_vou.status.value == 'CONFIRMED' %}
                                                    <span class="badge bg-success">Confirmed</span>
                                                {% elseif rendez_vou.status.value == 'CANCELLED' %}
                                                    <span class="badge bg-danger">Cancelled</span>
                                                {% elseif rendez_vou.status.value == 'COMPLETED' %}
                                                    <span class="badge bg-secondary">Completed</span>
                                                {% else %}
                                                    <span class="badge bg-dark">{{ rendez_vou.status.value }}</span>
                                                {% endif %}
                                            </td>
                                            <td class="px-4 py-3">
                                                {{ rendez_vou.duration }} min
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('app_rendez_vous_show', {'id': rendez_vou.id}) }}" class="btn btn-sm btn-outline-info" title="View">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_rendez_vous_edit', {'id': rendez_vou.id}) }}" class="btn btn-sm btn-outline-warning" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ rendez_vou.id }}" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>

                                        <!-- Delete Modal -->
                                        <div class="modal fade" id="deleteModal{{ rendez_vou.id }}" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header border-danger">
                                                        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to delete this appointment?</p>
                                                        <p class="text-muted small">This action cannot be undone.</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form method="post" action="{{ path('app_rendez_vous_delete', {'id': rendez_vou.id}) }}" style="display: inline;">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rendez_vou.id) }}">
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-info-circle me-3 fs-5"></i>
                        <div>
                            <h5 class="alert-heading mb-1">No Appointments Found</h5>
                            <p class="mb-0">There are no appointments scheduled yet. <a href="{{ path('app_rendez_vous_new') }}" class="alert-link">Create one now</a></p>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </section>
</main>

<style>
    .breadcrumb-section {
        border-bottom: 1px solid #e0e0e0;
    }
    
    .page-header h1 {
        color: #1E90FF;
    }
    
    .btn-primary {
        background-color: #1E90FF;
