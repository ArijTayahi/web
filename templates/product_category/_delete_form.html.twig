<form method="post" action="{{ path('app_product_category_delete', {'id': product_category.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');" style="display: inline-block;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product_category.id) }}">
    <button class="btn btn-sm btn-danger">
        <i class="fas fa-trash"></i>
    </button>
</form>
