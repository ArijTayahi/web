{% extends 'base.html.twig' %}

{% block title %}Nouvelle Ordonnance - MedTime{% endblock %}

{% block body %}
<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        font-family: 'Poppins', sans-serif;
    }

    .ordonnance-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        overflow: hidden;
    }

    .card-header-custom {
        background: linear-gradient(135deg, #FF6B6B 0%, #EE5A24 100%);
        color: white;
        padding: 2rem;
        text-align: center;
        position: relative;
    }

    .card-header-custom::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="50" cy="50" r="2" fill="rgba(255,255,255,0.1)"/></svg>') repeat;
        opacity: 0.1;
    }

    .form-floating > label {
        padding: 1rem 0.75rem;
        font-weight: 500;
        color: #6c757d;
    }

    .form-control, .form-select {
        border: 2px solid #e9ecef;
        border-radius: 12px;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

    .form-control:focus, .form-select:focus {
        border-color: #FF6B6B;
        box-shadow: 0 0 0 0.2rem rgba(255, 107, 107, 0.25);
        transform: translateY(-2px);
    }

    .btn-custom {
        background: linear-gradient(135deg, #FF6B6B 0%, #EE5A24 100%);
        border: none;
        border-radius: 12px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        font-size: 1rem;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
    }

    .btn-custom:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(255, 107, 107, 0.4);
        color: white;
    }

    .btn-secondary-custom {
        background: rgba(108, 117, 125, 0.1);
        border: 2px solid #6c757d;
        border-radius: 12px;
        padding: 0.75rem 2rem;
        font-weight: 600;
        color: #6c757d;
        transition: all 0.3s ease;
    }

    .btn-secondary-custom:hover {
        background: #6c757d;
        color: white;
        transform: translateY(-2px);
    }

    .form-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #FF6B6B;
        font-size: 1.2rem;
        z-index: 5;
    }

    .invalid-feedback {
        display: block;
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }

    .consultation-info {
        background: rgba(255, 107, 107, 0.1);
        border: 1px solid rgba(255, 107, 107, 0.2);
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="ordonnance-card">
                <!-- Header -->
                <div class="card-header-custom">
                    <h2 class="mb-0 fw-bold">
                        <i class="fas fa-file-prescription me-3"></i>
                        Nouvelle Ordonnance
                    </h2>
                    <p class="mb-0 mt-2 opacity-75">Cr√©er une ordonnance pour le patient</p>
                </div>

                <!-- Form -->
                <div class="card-body p-4">
                    <!-- Consultation Info -->
                    <div class="consultation-info">
                        <h6 class="fw-bold text-danger mb-2">
                            <i class="fas fa-info-circle me-2"></i>
                            Consultation associ√©e
                        </h6>
                        <p class="mb-1">
                            <strong>Patient:</strong> {{ ordonnance.consultation.patient.user.username }}
                        </p>
                        <p class="mb-1">
                            <strong>Date:</strong> {{ ordonnance.consultation.consultationDate|date('d/m/Y H:i') }}
                        </p>
                        <p class="mb-0">
                            <strong>Type:</strong> {{ ordonnance.consultation.type }}
                        </p>
                    </div>

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        <div class="row g-4">
                            <!-- Content Field -->
                            <div class="col-12">
                                <div class="form-floating position-relative">
                                    {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '8', 'placeholder': 'D√©taillez les m√©dicaments, posologies et instructions...'}}) }}
                                    {{ form_label(form.content, 'üìù Contenu de l\'ordonnance') }}
                                    <i class="fas fa-edit form-icon"></i>
                                </div>
                                {% if form.content.vars.errors|length > 0 %}
                                    <div class="invalid-feedback d-block">
                                        {{ form_errors(form.content) }}
                                    </div>
                                {% endif %}
                                <small class="text-muted mt-1 d-block">
                                    D√©crivez les m√©dicaments prescrits, les dosages, la fr√©quence et toute instruction particuli√®re.
                                </small>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex gap-3 justify-content-center mt-4">
                            <button type="submit" class="btn btn-custom">
                                <i class="fas fa-save me-2"></i>
                                {{ button_label|default('Cr√©er l\'Ordonnance') }}
                            </button>
                            <a href="{{ path('app_ordonnance_doctor_index') }}" class="btn btn-secondary-custom text-decoration-none">
                                <i class="fas fa-arrow-left me-2"></i>
                                Retour aux ordonnances
                            </a>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
