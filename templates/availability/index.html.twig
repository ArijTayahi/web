{% extends 'base.html.twig' %}

{% block title %}Doctor Availabilities - MedTime{% endblock %}

{% block body %}
<main class="main">
    <!-- Breadcrumb Section -->
    <div class="breadcrumb-section pt-4 pb-4" style="background-color: #f8f9fa;">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="{{ path('app_home') }}" style="color: #1E90FF;">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Doctor Availabilities</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Page Header -->
    <section class="page-header py-5">
        <div class="container">
            <div class="row align-items-center mb-4">
                <div class="col-lg-8">
                    <h1 class="h2 fw-bold mb-2">Doctor Availabilities</h1>
                    <p class="text-muted">Manage and view doctor working schedules</p>
                </div>
                <div class="col-lg-4 text-end">
                    <a href="{{ path('app_availability_new') }}" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Add New Availability
                    </a>
                </div>
            </div>

            <!-- Search & Filter Section -->
            <div class="card shadow-sm border-0 mt-4">
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-6">
                            <label for="search" class="form-label">üîç Search Doctor</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   placeholder="Search by doctor name or email..." 
                                   value="{{ search }}">
                        </div>

                        <div class="col-md-3">
                            <label for="recurring" class="form-label">üìÖ Filter by Recurring</label>
                            <select class="form-select" id="recurring" name="recurring">
                                <option value="">All</option>
                                <option value="1" {% if recurringFilter == '1' %}selected{% endif %}>Recurring</option>
                                <option value="0" {% if recurringFilter == '0' %}selected{% endif %}>One-Time</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label for="sortBy" class="form-label">‚¨ÜÔ∏è Sort By</label>
                            <select class="form-select" id="sortBy" name="sortBy">
                                <option value="dayOfWeek" {% if sortBy == 'dayOfWeek' %}selected{% endif %}>Day of Week</option>
                                <option value="startTime" {% if sortBy == 'startTime' %}selected{% endif %}>Start Time</option>
                                <option value="doctor" {% if sortBy == 'doctor' %}selected{% endif %}>Doctor Name</option>
                            </select>
                        </div>

                        <div class="col-md-6">
                            <label for="sortOrder" class="form-label">Order</label>
                            <select class="form-select" id="sortOrder" name="sortOrder">
                                <option value="ASC" {% if sortOrder == 'ASC' %}selected{% endif %}>Ascending</option>
                                <option value="DESC" {% if sortOrder == 'DESC' %}selected{% endif %}>Descending</option>
                            </select>
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search me-2"></i>Search & Filter
                            </button>
                            <a href="{{ path('app_availability_index') }}" class="btn btn-secondary">
                                <i class="bi bi-arrow-counterclockwise me-2"></i>Reset
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Availabilities Table Section -->
    <section class="availabilities-section py-5">
        <div class="container">
            {% if availabilities|length > 0 %}
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-light p-4 border-bottom">
                        <h5 class="mb-0">‚úÖ {{ availabilities|length }} Schedule(s) Found</h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="px-4 py-3">
                                            <a href="?search={{ search }}&sortBy=dayOfWeek&sortOrder={% if sortBy == 'dayOfWeek' and sortOrder == 'ASC' %}DESC{% else %}ASC{% endif %}" style="text-decoration: none; color: inherit;">
                                                Day of Week {% if sortBy == 'dayOfWeek' %}<i class="bi bi-arrow-{% if sortOrder == 'ASC' %}up{% else %}down{% endif %}"></i>{% endif %}
                                            </a>
                                        </th>
                                        <th class="px-4 py-3">Start Time</th>
                                        <th class="px-4 py-3">End Time</th>
                                        <th class="px-4 py-3">Doctor</th>
                                        <th class="px-4 py-3">Recurring</th>
                                        <th class="px-4 py-3 text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for availability in availabilities %}
                                        <tr class="align-middle">
                                            <td class="px-4 py-3">
                                                <span class="badge bg-info">{{ availability.dayOfWeek.value }}</span>
                                            </td>
                                            <td class="px-4 py-3">
                                                <strong>{{ availability.startTime ? availability.startTime|date('H:i') : 'N/A' }}</strong>
                                            </td>
                                            <td class="px-4 py-3">
                                                <strong>{{ availability.endTime ? availability.endTime|date('H:i') : 'N/A' }}</strong>
                                            </td>
                                            <td class="px-4 py-3">
                                                <span class="text-muted">{{ availability.doctor.username ?? availability.doctor.email }}</span>
                                            </td>
                                            <td class="px-4 py-3">
                                                {% if availability.recurring %}
                                                    <span class="badge bg-success">Yes</span>
                                                {% else %}
                                                    <span class="badge bg-danger">No</span>
                                                {% endif %}
                                            </td>
                                            <td class="px-4 py-3 text-center">
                                                <div class="btn-group" role="group">
                                                    <a href="{{ path('app_availability_show', {'id': availability.id}) }}" class="btn btn-sm btn-outline-info" title="View">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_availability_edit', {'id': availability.id}) }}" class="btn btn-sm btn-outline-warning" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ availability.id }}" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>

                                        <!-- Delete Modal -->
                                        <div class="modal fade" id="deleteModal{{ availability.id }}" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header border-danger">
                                                        <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Are you sure you want to delete this availability schedule?</p>
                                                        <p class="text-muted small">This action cannot be undone.</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form method="post" action="{{ path('app_availability_delete', {'id': availability.id}) }}" style="display: inline;">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ availability.id) }}">
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-info-circle me-3 fs-5"></i>
                        <div>
                            <h5 class="alert-heading mb-1">No Availabilities Found</h5>
                            <p class="mb-0">There are no doctor availabilities created yet. <a href="{{ path('app_availability_new') }}" class="alert-link">Create one now</a></p>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </section>
</main>

<style>
    .breadcrumb-section {
        border-bottom: 1px solid #e0e0e0;
    }
    
    .page-header h1 {
        color: #1E90FF;
    }
    
    .btn-primary {
        background-color: #1E90FF;
        border-color: #1E90FF;
    }
    
    .btn-primary:hover {
        background-color: #1873CC;
        border-color: #1873CC;
    }
    
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
    
    .badge {
        font-weight: 500;
        padding: 0.5rem 0.75rem;
    }
    
    .btn-group .btn {
        border-radius: 4px;
        margin: 0 2px;
    }
    
    .form-control, .form-select {
        border-radius: 8px;
        border: 1px solid #ddd;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #1E90FF;
        box-shadow: 0 0 0 0.2rem rgba(30, 144, 255, 0.25);
    }
</style>
{% endblock %}
