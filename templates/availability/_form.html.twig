{{ form_start(form, {'attr': {'class': 'form-layout availability-form', 'novalidate': true}}) }}

    <div class="row">
        <!-- Day of Week -->
        <div class="col-md-6 mb-4">
            <label class="form-label fw-bold text-dark">Day of Week <span class="text-danger">*</span></label>
            {{ form_widget(form.dayOfWeek, {'attr': {'class': 'form-select form-select-lg', 'required': true}}) }}
            {% if form.dayOfWeek.vars.errors|length > 0 %}
                <div class="alert alert-danger small mt-2 mb-0">
                    {% for error in form.dayOfWeek.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <!-- Recurring -->
        <div class="col-md-6 mb-4">
            <div class="form-check form-switch mt-4">
                {{ form_widget(form.recurring, {'attr': {'class': 'form-check-input', 'role': 'switch'}}) }}
                <label class="form-check-label" for="{{ form.recurring.vars.id }}">
                    Recurring Schedule
                </label>
            </div>
            <small class="d-block mt-2 text-muted">Enable if this schedule repeats every week</small>
        </div>
    </div>

    <div class="row">
        <!-- Start Time -->
        <div class="col-md-6 mb-4">
            <label class="form-label fw-bold text-dark">Start Time <span class="text-danger">*</span></label>
            {{ form_widget(form.startTime, {'attr': {'class': 'form-control form-control-lg', 'type': 'time', 'required': true}}) }}
            {% if form.startTime.vars.errors|length > 0 %}
                <div class="alert alert-danger small mt-2 mb-0">
                    {% for error in form.startTime.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <!-- End Time -->
        <div class="col-md-6 mb-4">
            <label class="form-label fw-bold text-dark">End Time <span class="text-danger">*</span></label>
            {{ form_widget(form.endTime, {'attr': {'class': 'form-control form-control-lg', 'type': 'time', 'required': true}}) }}
            {% if form.endTime.vars.errors|length > 0 %}
                <div class="alert alert-danger small mt-2 mb-0">
                    {% for error in form.endTime.vars.errors %}
                        {{ error.message }}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>

    <div class="row">
        <!-- Start Date -->
        <div class="col-md-6 mb-4">
            <label class="form-label fw-bold text-dark">Start Date</label>
            {{ form_widget(form.startDate, {'attr': {'class': 'form-control form-control-lg', 'type': 'date'}}) }}
            <small class="d-block mt-2 text-muted">Optional: Leave empty for immediate availability</small>
        </div>

        <!-- End Date -->
        <div class="col-md-6 mb-4">
            <label class="form-label fw-bold text-dark">End Date</label>
            {{ form_widget(form.endDate, {'attr': {'class': 'form-control form-control-lg', 'type': 'date'}}) }}
            <small class="d-block mt-2 text-muted">Optional: Leave empty if availability is ongoing</small>
        </div>
    </div>

    <!-- Doctor Selection -->
    <div class="mb-4">
        <label class="form-label fw-bold text-dark">Doctor <span class="text-danger">*</span></label>
        {{ form_widget(form.doctor, {'attr': {'class': 'form-select form-select-lg', 'required': true}}) }}
        {% if form.doctor.vars.errors|length > 0 %}
            <div class="alert alert-danger small mt-2 mb-0">
                {% for error in form.doctor.vars.errors %}
                    {{ error.message }}
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <!-- Form Actions -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="d-flex gap-3 justify-content-between">
                <a href="{{ path('app_availability_index') }}" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left me-2"></i>Back to List
                </a>
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-check-circle me-2"></i>{{ button_label|default('Save') }}
                </button>
            </div>
        </div>
    </div>

{{ form_end(form) }}

<style>
    .form-label {
        font-size: 0.95rem;
        margin-bottom: 0.5rem;
    }
    
    .form-control-lg,
    .form-select-lg {
        border-radius: 6px;
        border: 1px solid #d0d0d0;
        padding: 0.75rem 1rem;
    }
    
    .form-control:focus,
    .form-select:focus {
        border-color: #1E90FF;
        box-shadow: 0 0 0 0.2rem rgba(30, 144, 255, 0.25);
    }
    
    .btn-primary {
        background-color: #1E90FF;
        border-color: #1E90FF;
    }
    
    .btn-primary:hover {
        background-color: #1873CC;
        border-color: #1873CC;
    }
    
    .text-muted {
        color: #6c757d !important;
    }
    
    .text-danger {
        color: #dc3545 !important;
    }
    
    .alert {
        padding: 0.5rem 0.75rem;
        margin-bottom: 0;
    }
</style>