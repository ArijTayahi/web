{% extends 'admin/base_admin.html.twig' %}

{% block title %}Appointments - MedTime Admin{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 fw-bold text-dark mb-0">Appointments Management</h1>
    <div>
        <a href="{{ path('app_rendez_vous_new') }}" class="btn btn-primary rounded-pill px-4">
            New Appointment
        </a>
        <a href="{{ path('app_availability_new') }}" class="btn btn-success rounded-pill px-4 ms-2">
            New Availability
        </a>
    </div>
</div>

<!-- Rendez-vous Section -->
<div class="card border-0 shadow-sm rounded-4 mb-4">
    <div class="card-header bg-primary text-white rounded-top-4">
        <h5 class="mb-0">Scheduled Appointments (Rendez-vous)</h5>
    </div>
    <div class="card-body">
        {% if rendez_vouses|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Doctor</th>
                            <th>Patient</th>
                            <th>Date & Time</th>
                            <th>Duration (min)</th>
                            <th>Type</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for rdv in rendez_vouses %}
                        <tr>
                            <td><strong>#{{ rdv.id }}</strong></td>
                            <td>{{ rdv.doctor.username }}</td>
                            <td>{{ rdv.patient.username }}</td>
                            <td>{{ rdv.appointmentDateTime|date('d/m/Y H:i') }}</td>
                            <td>{{ rdv.duration }}</td>
                            <td><span class="badge bg-info">{{ rdv.consultationType.value }}</span></td>
                            <td>
                                {% if rdv.status.value == 'CONFIRMED' %}
                                    <span class="badge bg-success">Confirmed</span>
                                {% elseif rdv.status.value == 'PENDING' %}
                                    <span class="badge bg-warning">Pending</span>
                                {% elseif rdv.status.value == 'CANCELLED' %}
                                    <span class="badge bg-danger">Cancelled</span>
                                {% elseif rdv.status.value == 'COMPLETED' %}
                                    <span class="badge bg-info">Completed</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ rdv.status.value }}</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('app_rendez_vous_show', {'id': rdv.id}) }}" class="btn btn-sm btn-info">View</a>
                                <a href="{{ path('app_rendez_vous_edit', {'id': rdv.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info mb-0">
                No scheduled appointments yet. <a href="{{ path('app_rendez_vous_new') }}" class="alert-link">Create one</a>
            </div>
        {% endif %}
    </div>
</div>

<!-- Availability Section -->
<div class="card border-0 shadow-sm rounded-4">
    <div class="card-header bg-success text-white rounded-top-4">
        <h5 class="mb-0">Doctor Availabilities</h5>
    </div>
    <div class="card-body">
        {% if availabilities|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Doctor</th>
                            <th>Day of Week</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Recurring</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for availability in availabilities %}
                        <tr>
                            <td><strong>#{{ availability.id }}</strong></td>
                            <td>{{ availability.doctor.username }}</td>
                            <td><span class="badge bg-primary">{{ availability.dayOfWeek.value }}</span></td>
                            <td>{{ availability.startTime|date('H:i') }}</td>
                            <td>{{ availability.endTime|date('H:i') }}</td>
                            <td>
                                {% if availability.recurring %}
                                    <span class="badge bg-success">Yes</span>
                                {% else %}
                                    <span class="badge bg-secondary">No</span>
                                {% endif %}
                            </td>
                            <td>{{ availability.startDate ? availability.startDate|date('d/m/Y') : '-' }}</td>
                            <td>{{ availability.endDate ? availability.endDate|date('d/m/Y') : '-' }}</td>
                            <td>
                                <a href="{{ path('app_availability_show', {'id': availability.id}) }}" class="btn btn-sm btn-info">View</a>
                                <a href="{{ path('app_availability_edit', {'id': availability.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info mb-0">
                No availabilities configured yet. <a href="{{ path('app_availability_new') }}" class="alert-link">Add one</a>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
