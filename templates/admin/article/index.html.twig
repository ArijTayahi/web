{% extends 'base.html.twig' %}

{% block title %}Gestion des Articles - Admin{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-newspaper"></i> Gestion des Articles</h1>
        <a href="{{ path('app_admin_article_new') }}" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nouvel Article
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Spécialité</th>
                        <th>Auteur</th>
                        <th>Statut</th>
                        <th>Vues</th>
                        <th>Likes</th>
                        <th>Commentaires</th>
                        <th>Date création</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for article in articles %}
                        <tr>
                            <td>{{ article.id }}</td>
                            <td>
                                <strong>{{ article.titre }}</strong>
                                {% if article.image %}
                                    <i class="fas fa-image text-muted"></i>
                                {% endif %}
                            </td>
                            <td><span class="badge bg-primary">{{ article.specialite.nom }}</span></td>
                            <td>{% if article.auteur %}Dr. {{ article.auteur.user.username }}{% else %}<em class="text-muted">Admin</em>{% endif %}</td>
                            <td>
                                <span class="badge bg-{{ article.statut == 'publie' ? 'success' : (article.statut == 'brouillon' ? 'warning' : 'secondary') }}">
                                    {{ article.statut }}
                                </span>
                            </td>
                            <td><i class="fas fa-eye"></i> {{ article.nbVues }}</td>
                            <td><i class="fas fa-heart text-danger"></i> {{ article.likes|length }}</td>
                            <td><i class="fas fa-comment"></i> {{ article.comments|length }}</td>
                            <td>{{ article.dateCreation|date('d/m/Y') }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('app_admin_article_show', {id: article.id}) }}" 
                                       class="btn btn-sm btn-info" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_admin_article_edit', {id: article.id}) }}" 
                                       class="btn btn-sm btn-warning" title="Modifier">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button" 
                                            class="btn btn-sm btn-danger" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#deleteModal{{ article.id }}"
                                            title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>

                                <!-- Modal de suppression -->
                                <div class="modal fade" id="deleteModal{{ article.id }}" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Confirmer la suppression</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                Êtes-vous sûr de vouloir supprimer l'article "{{ article.titre }}" ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                <form method="post" action="{{ path('app_admin_article_delete', {id: article.id}) }}" style="display: inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                                                    <button type="submit" class="btn btn-danger">Supprimer</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10" class="text-center text-muted">
                                <i class="fas fa-inbox"></i> Aucun article
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}