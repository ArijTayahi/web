{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Catégories{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <a href="{{ path('app_admin_product_category_index') }}" class="btn btn-light mb-4">
        <i class="fas fa-arrow-left"></i> Retour
    </a>

    <div class="row">
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body p-5">
                    <h1 class="fw-bold mb-4">{{ category.name }}</h1>

                    <div class="row mb-4">
                        <div class="col-md-12">
                            <h5 class="text-muted mb-3">Produits dans cette catégorie</h5>
                            {% if category.products|length > 0 %}
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Nom</th>
                                                <th>Prix</th>
                                                <th>Stock</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for product in category.products %}
                                                <tr>
                                                    <td>{{ product.id }}</td>
                                                    <td>{{ product.name }}</td>
                                                    <td>{{ product.price|number_format(2, '.', ',') }} DT</td>
                                                    <td>
                                                        <span class="badge bg-{{ product.stock > 0 ? 'success' : 'danger' }}">
                                                            {{ product.stock }}
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <a href="{{ path('app_product_show', {id: product.id}) }}" class="btn btn-sm btn-info">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle"></i> Aucun produit dans cette catégorie
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h6 class="mb-0">Actions</h6>
                </div>
                <div class="card-body">
                    <a href="{{ path('app_product_category_edit', {id: category.id}) }}" class="btn btn-warning w-100 mb-2">
                        <i class="fas fa-edit"></i> Modifier
                    </a>
                    <button type="button" class="btn btn-danger w-100" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="fas fa-trash"></i> Supprimer
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal de suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmer la suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Êtes-vous sûr de vouloir supprimer la catégorie "{{ category.name }}" ?
                {% if category.products|length > 0 %}
                    <div class="alert alert-warning mt-3">
                        <i class="fas fa-exclamation-triangle"></i> Cette catégorie contient {{ category.products|length }} produit(s).
                    </div>
                {% endif %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form method="post" action="{{ path('app_product_category_delete', {id: category.id}) }}" style="display: inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
