{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
<h1>Liste des produits</h1>

<div class="products">
    {% for product in products %}
        <div class="card">
            <h3>{{ product.name }}</h3>
            <p>Prix: {{ product.price }} DT</p>
            <p>Catégorie: {{ product.categoryId.name }}</p>
        </div>
    {% else %}
        <p>Aucun produit trouvé</p>
    {% endfor %}
</div>
{% endblock %}
