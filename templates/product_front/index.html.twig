{% extends 'base.html.twig' %}

{% block title %}Pharmacie en ligne - Produits{% endblock %}

{% block body %}
<style>
    :root {
        --primary: #667eea;
        --success: #28a745;
        --warning: #ffc107;
        --danger: #dc3545;
        --light: #f8f9fa;
        --dark: #343a40;
    }

    .marketplace-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 60px 0;
        margin-bottom: 40px;
        border-radius: 0 0 50px 50px;
    }

    .marketplace-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .marketplace-header p {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    .search-bar {
        background: white;
        padding: 20px;
        border-radius: 25px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        margin-top: -30px;
        margin-bottom: 40px;
        position: relative;
        z-index: 10;
    }

    .product-card {
        border: none;
        transition: all 0.3s ease;
        height: 100%;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .product-card:hover {
        transform: translateY(-15px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
    }

    .product-image {
        position: relative;
        height: 250px;
        background: linear-gradient(135deg, #667eea20 0%, #764ba220 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .product-badges {
        position: absolute;
        top: 12px;
        right: 12px;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .badge-custom {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 4px;
        color: white;
    }

    .badge-prescription {
        background: #ff4757;
    }

    .badge-stock {
        background: #2ed573;
    }

    .badge-stock-low {
        background: #ffa502;
    }

    .product-body {
        padding: 20px;
    }

    .product-category {
        display: inline-block;
        background: #667eea20;
        color: #667eea;
        font-size: 0.8rem;
        font-weight: 600;
        padding: 4px 10px;
        border-radius: 12px;
        margin-bottom: 10px;
    }

    .product-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #343a40;
        margin-bottom: 8px;
        min-height: 50px;
    }

    .product-brand {
        color: #6c757d;
        font-size: 0.9rem;
        margin-bottom: 10px;
    }

    .product-description {
        color: #6c757d;
        font-size: 0.95rem;
        margin-bottom: 15px;
        min-height: 50px;
    }

    .product-rating {
        display: flex;
        align-items: center;
        gap: 5px;
        margin-bottom: 12px;
    }

    .stars {
        color: #ffc107;
        font-size: 0.9rem;
    }

    .rating-text {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .product-footer {
        border-top: 1px solid #e0e0e0;
        padding-top: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .product-price {
        display: flex;
        flex-direction: column;
    }

    .price-current {
        font-size: 1.4rem;
        font-weight: 700;
        color: #28a745;
    }

    .btn-add-cart {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 15px;
        font-weight: 600;
        transition: all 0.3s;
        cursor: pointer;
        font-size: 0.95rem;
    }

    .btn-add-cart:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.4);
        color: white;
        text-decoration: none;
    }

    .btn-add-cart:disabled {
        background: #ccc;
        cursor: not-allowed;
        transform: none;
    }

    .cart-badge {
        position: fixed;
        bottom: 30px;
        right: 30px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 15px 20px;
        border-radius: 50px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
        z-index: 100;
        cursor: pointer;
        transition: all 0.3s;
        font-weight: 600;
    }

    .cart-badge:hover {
        transform: scale(1.1);
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
    }

    .empty-state-icon {
        font-size: 5rem;
        margin-bottom: 20px;
        opacity: 0.5;
    }

    @media (max-width: 768px) {
        .marketplace-header h1 {
            font-size: 1.8rem;
        }

        .product-card {
            margin-bottom: 20px;
        }
    }
</style>

<!-- Header Marketplace -->
<div class="marketplace-header">
    <div class="container">
        <h1><i class="fas fa-pills"></i> Pharmacie Médillab</h1>
        <p>Vos produits pharmaceutiques en ligne - Livraison rapide et fiable</p>
    </div>
</div>

<div class="container">
    <!-- Barre de Recherche -->
    <div class="search-bar">
        <form method="get" action="{{ path('app_products') }}" class="row g-3 align-items-end">
            <div class="col-md-6">
                <div class="input-group">
                    <span class="input-group-text bg-white border-0">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <input type="text" name="q" class="form-control border-0" 
                           placeholder="Rechercher un produit..." value="{{ query|default('') }}">
                </div>
            </div>

            <div class="col-md-3">
                <select name="sort" class="form-select">
                    <option value="name">Nom (A-Z)</option>
                    <option value="price_asc">Prix (bas à haut)</option>
                    <option value="price_desc">Prix (haut à bas)</option>
                </select>
            </div>

            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-search"></i> Chercher
                </button>
            </div>
        </form>
    </div>

    <!-- Grille Produits -->
    {% if products|length > 0 %}
        <div class="row g-4">
            {% for product in products %}
                <div class="col-sm-6 col-lg-4">
                    <div class="product-card">
                        <!-- Image du Produit -->
                        <div class="product-image">
                            {% if product.image %}
                                <img src="{{ product.image }}" alt="{{ product.name }}">
                            {% else %}
                                <i class="fas fa-pills" style="font-size: 4rem; color: #667eea; opacity: 0.3;"></i>
                            {% endif %}

                            <!-- Badges -->
                            <div class="product-badges">
                                {% if product.isPrescriptionRequired %}
                                    <span class="badge-custom badge-prescription">
                                        <i class="fas fa-prescription-bottle-medical"></i> Ordonnance
                                    </span>
                                {% endif %}

                                {% if product.stock > 10 %}
                                    <span class="badge-custom badge-stock">
                                        <i class="fas fa-check-circle"></i> En stock
                                    </span>
                                {% elseif product.stock > 0 %}
                                    <span class="badge-custom badge-stock-low">
                                        <i class="fas fa-exclamation-circle"></i> Stock faible
                                    </span>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Info Produit -->
                        <div class="product-body">
                            <!-- Catégorie -->
                            {% if product.categoryId %}
                                <div class="product-category">
                                    {{ product.categoryId.name }}
                                </div>
                            {% endif %}

                            <!-- Titre -->
                            <h5 class="product-title">{{ product.name }}</h5>

                            <!-- Marque -->
                            {% if product.brand %}
                                <div class="product-brand">
                                    <i class="fas fa-tag"></i> {{ product.brand }}
                                </div>
                            {% endif %}

                            <!-- Description -->
                            <p class="product-description">
                                {{ product.description|slice(0, 80) }}{% if product.description|length > 80 %}...{% endif %}
                            </p>

                            <!-- Rating -->
                            <div class="product-rating">
                                <div class="stars">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star-half-alt"></i>
                                </div>
                                <span class="rating-text">({{ random(10, 500) }} avis)</span>
                            </div>

                            <!-- Footer -->
                            <div class="product-footer">
                                <div class="product-price">
                                    <span class="price-current">
                                        {{ product.price|number_format(2, '.', ',') }} DT
                                    </span>
                                </div>
                                {% if product.isAvailable and product.stock > 0 %}
                                    <button class="btn-add-cart" onclick="addToCart({{ product.id }}, '{{ product.name }}')">
                                        <i class="fas fa-shopping-cart"></i>
                                    </button>
                                {% else %}
                                    <button class="btn-add-cart" disabled>
                                        <i class="fas fa-ban"></i>
                                    </button>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="fas fa-search"></i>
            </div>
            <h3>Aucun produit trouvé</h3>
            <p class="text-muted">Essayez une autre recherche ou explorez nos catégories</p>
            <a href="{{ path('app_products_front') }}" class="btn btn-primary mt-3">
                <i class="fas fa-home"></i> Voir tous les produits
            </a>
        </div>
    {% endif %}
</div>

<!-- Panier Flottant -->
<div class="cart-badge" id="cartBadge" onclick="window.location.href='#cart'">
    <i class="fas fa-shopping-cart"></i>&nbsp;
    <span id="cartCount">0</span>
</div>

<script>
    function addToCart(productId, productName) {
        let cart = JSON.parse(localStorage.getItem('cart') || '[]');
        let item = cart.find(i => i.id === productId);
        
        if (item) {
            item.quantity++;
        } else {
            cart.push({ id: productId, name: productName, quantity: 1 });
        }
        
        localStorage.setItem('cart', JSON.stringify(cart));
        updateCartBadge();
        
        alert(productName + ' ajouté au panier!');
    }

    function updateCartBadge() {
        let cart = JSON.parse(localStorage.getItem('cart') || '[]');
        let totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
        document.getElementById('cartCount').textContent = totalItems;
    }

    document.addEventListener('DOMContentLoaded', updateCartBadge);
</script>

{% endblock %}
