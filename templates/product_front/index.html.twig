{% extends 'base.html.twig' %}

{% block title %}Produits - Pharmacie en ligne{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="fw-bold mb-4">üíä Produits Pharmaceutiques</h1>
            
            <!-- Filtres et Recherche -->
            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-body p-4">
                    <form method="get" action="{{ path('app_products_front') }}" class="row g-3 align-items-end">
                        <!-- Recherche -->
                        <div class="col-md-4">
                            <label class="form-label fw-bold">Rechercher</label>
                            <input type="text" name="q" class="form-control rounded-pill" 
                                   placeholder="Nom ou marque..." value="{{ query|default('') }}">
                        </div>
                        
                        <!-- Cat√©gorie -->
                        <div class="col-md-3">
                            <label class="form-label fw-bold">Cat√©gorie</label>
                            <select name="category" class="form-select rounded-pill">
                                <option value="">Toutes les cat√©gories</option>
                                {% for category in categories %}
                                    <option value="{{ category.id }}" 
                                            {% if selectedCategory and selectedCategory.id == category.id %}selected{% endif %}>
                                        {{ category.name }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <!-- Tri -->
                        <div class="col-md-3">
                            <label class="form-label fw-bold">Trier par</label>
                            <select name="sort" class="form-select rounded-pill">
                                <option value="name" {% if sortBy == 'name' %}selected{% endif %}>Nom (A-Z)</option>
                                <option value="price_asc" {% if sortBy == 'price_asc' %}selected{% endif %}>Prix (croissant)</option>
                                <option value="price_desc" {% if sortBy == 'price_desc' %}selected{% endif %}>Prix (d√©croissant)</option>
                            </select>
                        </div>
                        
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100 rounded-pill">
                                üîç Chercher
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Produits -->
    {% if products|length > 0 %}
        <div class="row g-4">
            {% for product in products %}
                <div class="col-md-6 col-lg-4">
                    <div class="card border-0 shadow-sm rounded-4 h-100 transition-all hover-lift">
                        <!-- Image -->
                        {% if product.image %}
                            <img src="{{ product.image }}" class="card-img-top rounded-top" 
                                 alt="{{ product.name }}" style="height: 200px; object-fit: cover;">
                        {% else %}
                            <div class="bg-light rounded-top" style="height: 200px; display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-pills fa-3x text-secondary"></i>
                            </div>
                        {% endif %}
                        
                        <div class="card-body d-flex flex-column">
                            <!-- Cat√©gorie Badge -->
                            {% if product.category %}
                                <span class="badge bg-info mb-2" style="width: fit-content;">
                                    {{ product.category.name }}
                                </span>
                            {% endif %}
                            
                            <!-- Nom du produit -->
                            <h5 class="card-title fw-bold mb-2">{{ product.name }}</h5>
                            
                            <!-- Marque -->
                            {% if product.brand %}
                                <small class="text-muted mb-2">
                                    <i class="fas fa-tag me-1"></i>
                                    {{ product.brand }}
                                </small>
                            {% endif %}
                            
                            <!-- Description courte -->
                            <p class="card-text text-muted mb-3" style="font-size: 0.95rem;">
                                {{ product.description|slice(0, 60) }}{% if product.description|length > 60 %}...{% endif %}
                            </p>
                            
                            <!-- M√©tadonn√©es -->
                            <div class="d-flex justify-content-between align-items-center mt-auto pt-3 border-top mb-3">
                                <div>
                                    <h5 class="text-success fw-bold mb-0">
                                        {{ product.price|number_format(2, '.', ',') }} DT
                                    </h5>
                                </div>
                                <div>
                                    {% if product.stock > 0 %}
                                        <span class="badge bg-success">En stock</span>
                                    {% else %}
                                        <span class="badge bg-danger">Rupture</span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <!-- Badges additionnels -->
                            {% if product.isPrescriptionRequired %}
                                <div class="alert alert-sm alert-warning mb-3 py-2" style="font-size: 0.85rem;">
                                    <i class="fas fa-prescription-bottle-medical"></i> Sur ordonnance
                                </div>
                            {% endif %}
                        </div>
                        
                        <!-- Bouton Ajouter -->
                        <div class="card-footer bg-white border-0 p-3 text-center">
                            {% if product.isAvailable and product.stock > 0 %}
                                <button class="btn btn-primary btn-sm rounded-pill w-100">
                                    <i class="fas fa-shopping-cart"></i> Ajouter au panier
                                </button>
                            {% else %}
                                <button class="btn btn-secondary btn-sm rounded-pill w-100" disabled>
                                    <i class="fas fa-ban"></i> Non disponible
                                </button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-info text-center py-5" role="alert">
            <i class="fas fa-inbox fa-3x mb-3"></i>
            <h4 class="mt-3">Aucun produit trouv√©</h4>
            <p class="text-muted">Essayez une autre recherche ou consultez nos cat√©gories</p>
        </div>
    {% endif %}
</div>

<!-- Styles suppl√©mentaires -->
<style>
    .transition-all {
        transition: all 0.3s ease;
    }
    
    .hover-lift:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15) !important;
    }
    
    .alert-sm {
        font-size: 0.85rem;
        padding: 0.5rem 0.75rem;
        margin-bottom: 0;
    }
</style>
{% endblock %}
